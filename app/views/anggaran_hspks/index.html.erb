<div class="row">
  <div class="col-12">
    <nav aria-label="breadcrumb" class="d-none d-md-inline-block mb-3">
      <ol class="breadcrumb breadcrumb-dark breadcrumb-transparent mb-0">
        <li class="breadcrumb-item">
          <%= link_to root_path do %>
            <i class="fas fa-home"></i>
          <% end %>
        </li>
        <li class="breadcrumb-item active" aria-current="page"><%= link_to "Anggaran HSPK", anggaran_hspks_path %></li>
      </ol>
    </nav>
    <div class="card border-0 shadow">
      <div class="card-header">
        <div class="row align-items-center">
          <div class="col">
            <h2 class="fs-5 fw-bold mb-0">Anggaran HSPK</h2>
          </div>
          <div class="col text-end">
            <%= link_to new_anggaran_hspk_path,
              remote: true,
              data: {
                      controller: 'form-modal',
                      action: 'ajax:complete->form-modal#success:prevent',
                      bs_toggle: 'modal',
                      bs_target: '#form-modal'
                    },
              class: "btn btn-sm btn-info" do %>
              <i class="fas fa-plus me-2"></i>
              <span>Tambah Data</span>
            <% end %>
          </div>
        </div>
      </div>
      <div class="table-responsive p-4">
        <table class="table table-flush datatable" data-datatable>
          <thead>
            <tr>
              <th>Tahun</th>
              <th>Kode barang</th>
              <th>Uraian barang</th>
              <th>Spesifikasi</th>
              <th>Satuan</th>
              <th>Harga satuan</th>
            </tr>
          </thead>
          <tbody>
            <% @anggaran_hspks.each do |anggaran_hspk| %>
              <tr>
                <td><%= anggaran_hspk.tahun %></td>
                <td><%= anggaran_hspk.kode_barang %></td>
                <td><%= anggaran_hspk.uraian_barang %></td>
                <td><%= anggaran_hspk.spesifikasi %></td>
                <td><%= anggaran_hspk.satuan %></td>
                <td><%= anggaran_hspk.harga_satuan %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
