<%= form_with(model: [@rincian, @tahapan, anggaran], local: true) do |form| %>
  <% if anggaran.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(anggaran.errors.count, "error") %> prohibited this anggaran from being saved:</h2>

      <ul>
        <% anggaran.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <% options = (0..5) %>
    <%= form.label :level %>
    <%= form.select :level, options %>
  </div>

  <div class="field">
  <% anggarans = @tahapan.anggarans %>
    <% options = options_from_collection_for_select(anggarans, 'id', 'uraian') %>
    <%= form.label :parent_id %>
    <%= form.select :parent_id, options %>
  </div>


  <div class="field">
    <%= form.label :kode_rek %>
    <%= form.text_field :kode_rek %>
  </div>

  <div class="field">
    <%= form.label :uraian %>
    <%= form.text_area :uraian %>
  </div>

  <div class="field">
    <%= form.label :jumlah %>
    <%= form.number_field :jumlah %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
