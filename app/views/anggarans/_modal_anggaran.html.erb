<%= link_to 'Tambah Anggaran', '#', remote: true, data: {'bs-toggle': 'modal', 'bs-target': "#modal-anggaran-#{index_tahapan}"}  %>
<div class="modal fade " id="<%= "modal-anggaran-#{index_tahapan}" %>" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modal-anggaran-title">Form Anggaran</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" id="modal-anggaran-body">
        <%= render 'anggarans/modal_form', rincian: rincian, tahapan: tahapan, anggaran: tahapan.anggarans.build %>
      </div>
    </div>
  </div>
</div>
