<p id="notice"><%= notice %></p>

<h1>Anggarans</h1>

<table>
  <thead>
    <tr>
      <th>Kode rek</th>
      <th>Uraian</th>
      <th>Jumlah</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @anggarans.order(:id).each do |anggaran| %>
      <tr>
        <td><%= anggaran.kode_rek %></td>
        <td><%= anggaran.uraian %></td>
        <td><%= anggaran.jumlah %></td>
        <td><%= link_to 'Show', rincian_tahapan_anggaran_path(@rincian, @tahapan, anggaran) %></td>
        <td><%= link_to 'Edit', edit_rincian_tahapan_anggaran_path(@rincian, @tahapan, anggaran) %></td>
        <td><%= link_to 'Destroy', rincian_tahapan_anggaran_path(@rincian, @tahapan, anggaran), method: :delete, data: { confirm: "Menghapus Anggaran '#{anggaran.uraian}' ?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Anggaran', new_rincian_tahapan_anggaran_path(@rincian, @tahapan) %>
