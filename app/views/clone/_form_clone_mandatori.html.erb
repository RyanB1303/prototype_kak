<%= form_with url: url,
              method: :post,
              local: false,
              data: {
                  controller: 'form-ajax',
                  action: 'ajax:complete->form-ajax#processAjax'
              } do |form| %>
  <div class="field">
    <%= form.label :usulan, { class: "form-label" } %>
    <%= form.text_field :usulan, { class: "form-control", readonly: true , value: mandatori.usulan } %>
  </div>
  <div class="field">
    <%= form.label :peraturan_terkait, { class: "form-label" } %>
    <%= form.text_area :peraturan_terkait, { class: "form-control", readonly: true, value: mandatori.peraturan_terkait } %>
  </div>
  <div class="field">
    <%= form.label :tahun_sekarang, { class: "form-label" } %>
    <%= form.text_field :tahun_asal, { class: "form-control", readonly: true, value: tahun_asal } %>
  </div>
  <div class="field">
    <%= form.label :tahun_tujuan, { class: "form-label" } %>
    <%= form.select :tahun_tujuan, options_for_select(KelompokAnggaran.all.collect { |ka| [ka.nama_sederhana_kelompok_tahun, ka.id] } ), {include_blank: true},
                    { data: { placeholder: "Pilih Tahun Cloning",
                              controller: 'dropdown'
                    } } %>
  </div>
  <div class="actions my-4">
    <%= form.submit "Clone" %>
  </div>
<% end %>
