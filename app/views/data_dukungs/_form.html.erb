<%= form_with(model: data_dukung, local: false,
              data: {
                controller: 'form-ajax',
                form_ajax_target_param: dom_id(data_dukung),
                form_ajax_type_param: data_dukung.new_record? ? 'afterbegin' : '',
                action: 'ajax:complete->form-ajax#processAjax'
}) do |form| %>
  <% if data_dukung.errors.any? %>
    <div id="error_explanation">
      <h2>Terdapat <%= pluralize(data_dukung.errors.count, "error") %> error:</h2>

      <ul>
        <% data_dukung.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.hidden_field :data_dukungable_type %>
    <%= form.hidden_field :data_dukungable_id %>
  </div>

  <div class="field">
    <%= form.label :nama_data, class: 'form-label' %>
    <%= form.text_field :nama_data, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :keterangan, class: 'form-label' %>
    <%= form.text_field :keterangan, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
