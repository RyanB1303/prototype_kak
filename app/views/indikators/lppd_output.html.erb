<%= content_for :html_title, "Outcome LPPD OPD" %>
<%= content_for :navigation do %>
  <li class="breadcrumb-item" aria-current="page">Indikator</li>
  <li class="breadcrumb-item" aria-current="page">LPPD</li>
  <li class="breadcrumb-item active" aria-current="page">Output</li>
<% end %>
<% content_for :view_utama do %>
  <%= render 'shared/card_layout', title: "Indikator LPPD Output #{@nama_opd} - #{@tahun}" do %>
    <div class="table-responsive mb-5 d-grid gap-2">
      <div class="action-btn">
        <%= link_to new_indikator_path(jenis: 'LPPD', sub_jenis: 'Output', kode_opd: @kode_opd, tahun: @tahun),
         remote: true,
         data: {
           controller: 'form-modal',
           action: 'ajax:complete->form-modal#success:prevent',
           bs_toggle: 'modal',
           bs_target: '#form-modal'
         },
         class: 'btn btn-sm btn-primary' do %>
          <i class="fas fa-plus me-2"></i>
          <span>Indikator Output LPPD</span>
        <% end %>
      </div>
      <table class="table align-items-center counter">
        <thead class="thead-tujuan">
          <tr class="header-tujuan">
            <th class="border" scope="col" width="20px">No.</th>
            <th class="border" scope="col">Indikator</th>
            <th class="border" scope="col" width="50px">Target</th>
            <th class="border" scope="col">Satuan</th>
            <th class="border" scope="col">Action</th>
          </tr>
        </thead>
        <tbody id="new_indikator">
          <%= render partial: 'indikators/indikator', collection: @lppd_output, as: :indikator %>
        </tbody>
      </table>
    </div>
  <% end %>
<% end %>
