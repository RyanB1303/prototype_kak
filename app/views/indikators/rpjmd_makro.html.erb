<%= content_for :html_title, "RPJMD Makro" %>
<%= content_for :navigation do %>
  <li class="breadcrumb-item" aria-current="page">Indikator</li>
  <li class="breadcrumb-item active" aria-current="page">RPJMD Makro</li>
<% end %>
<% content_for :view_utama do %>
  <%= render 'shared/card_layout', title: "RPJMD Makro - #{@tahun}" do %>
    <div class="table-responsive mb-5 d-grid gap-2">
      <div class="action-btn">
        <%= link_to new_indikator_path(jenis: 'RPJMD', sub_jenis: 'Makro', tahun: @tahun),
         remote: true,
         data: {
           controller: 'form-modal',
           action: 'ajax:complete->form-modal#success:prevent',
           bs_toggle: 'modal',
           bs_target: '#form-modal'
         },
         class: 'btn btn-sm btn-primary' do %>
          <i class="fas fa-plus me-2"></i>
          <span>Indikator RPJMD Makro</span>
        <% end %>
      </div>
      <table class="table align-items-center counter">
        <%= render 'indikators/header_table_indikator' %>
        <tbody id="new_indikator">
          <%= render partial: 'indikators/indikator', collection: @rpjmd_makro, as: :indikator %>
        </tbody>
      </table>
    </div>
  <% end %>
<% end %>
