<%= form_with(model: isu_strategis_opd) do |form| %>
  <% if isu_strategis_opd.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(isu_strategis_opd.errors.count, "error") %> prohibited this isu_strategis_opd from being saved:</h2>

      <ul>
        <% isu_strategis_opd.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card">
    <div class="card-body">
      <div class="field">
        <%= form.label :kode, class: 'form-label' %>
        <%= form.text_field :kode, class: 'form-control' %>
      </div>

      <div class="field">
        <%= form.label :isu_strategis, class: 'form-label' %>
        <%= form.text_field :isu_strategis, class: 'form-control' %>
      </div>

      <div class="field">
        <%= form.label :tahun, class: 'form-label' %>
        <%= form.select :tahun, selected_tahun(form.object.tahun),
                    {include_blank: true},
                    { class: "form-control",
                      data: { placeholder: "Pilih Tahun Sasaran",
                              controller: 'dropdown',
                              dropdown_jenis_value: 'ajax',
                              dropdown_url_value: kelompok_anggarans_path(:json) } } %>
      </div>

      <div class="field">
        <%= form.label :opd, class: 'form-label' %>
        <%= form.select :kode_opd, options_for_select(@opds, current_user.opd) ,{include_blank: true},
          { class: 'form-control', data: { controller: 'dropdown', placeholder: 'Pilih OPD' } }%>
      </div>


      <div class="actions">
        <%= form.submit %>
      </div>
    </div>
  </div>
<% end %>
