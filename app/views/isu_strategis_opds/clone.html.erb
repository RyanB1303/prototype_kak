<%= form_with(url: isu_strategis_opd_clone_path,
              method: :post,
              local: false,
              data: {
                controller: 'form-ajax',
                form_ajax_target_param: 'isu-strategis',
                action: 'ajax:complete->form-ajax#afterSubmitRefresh'
              }
) do |form| %>
  <div class="field">
    <%= form.label :isu_strategis, class: 'form-label' %>
    <%= form.text_area :isu_strategis, class: 'form-control', readonly: true, value: @isu_strategis_opd %>
  </div>

  <div class="field">
    <%= form.label :tahun_asal, { class: "form-label" } %>
    <%= form.text_field :tahun_asal, { class: "form-control", readonly: true, value: @tahun } %>
  </div>
  <div class="field">
    <%= form.label :tahun_tujuan, { class: "form-label" } %>
    <%= form.select :tahun_tujuan, options_for_select(KelompokAnggaran.all.collect { |ka| [ka.nama_sederhana_kelompok_tahun, ka.id] } ), {include_blank: true},
                    { data: { placeholder: "Pilih Tahun Cloning",
                              controller: 'dropdown',
                              dropdown_parent_value: '#form-modal'
                    } } %>
  </div>
  <div class="actions my-4">
    <%= form.submit "Clone" %>
  </div>
<% end %>
