<tr data-controller="row">
  <td class="text-gray-900 fw-bolder align-middle" scope="row"></td>
  <td class="fw-bolder text-wrap" width="700px"><%= jabatan %></td>
  <%= render(ColFieldComponent.new(width: '500px')) do %>
    <%= jabatan.jenis_jabatan %>
  <% end %>
  <td class="fw-bolder">
    <% if jabatan.kepegawaians.where(tahun: @tahun).any? %>
      <%= link_to edit_jumlah_jabatan_kepegawaians_path(jabatan_id: jabatan),
       remote: true, class: 'btn btn-sm btn-outline-info',
       data: {
         action: 'ajax:complete->row#editRow:prevent',
         editable_table_target: 'edit'
       } do %>
        <span class="fas fa-pencil-alt me-2"></span>
        <span>Edit</span>
      <% end %>
    <% else %>
      <%= link_to new_jabatan_kepegawaian_path(jabatan_id: jabatan),
       remote: true, class: 'btn btn-sm btn-outline-primary',
       data: {
         action: 'ajax:complete->row#editRow:prevent',
         editable_table_target: 'edit'
       } do %>
        <span class="fas fa-plus me-2"></span>
        <span>Input</span>
      <% end %>
    <% end %>
  </td>
  <% @status_kepegawaian.each do |kepegawaian| %>
    <%= render(ColFieldComponent.new(el_class: "text-center #{dom_class(jabatan, 'kepegawaian')}")) do %>
      <%= jabatan.jumlah_status_kepegawaian(@tahun).dig(kepegawaian) %>
    <% end%>
  <% end %>
  <% @jenis_pendidikan.each do |pendidikan| %>
    <td class="fw-bolder text-wrap <%= dom_class(jabatan, 'pendidikan') %>" data-pendidikan="<%= jabatan.pendidikan_pegawai(@tahun).include?(pendidikan) %>"></td>
  <% end %>
</tr>
