<%= form_with(model: [user, kak], class: "mt-2") do |form| %>
  <% if kak.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(kak.errors.count, "error") %> prohibited this kak from being saved:</h2>
      <ul>
        <% kak.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= form.label :dasar_hukum, class: "form-label" %>
    <%= form.text_area :dasar_hukum, multiple: true, value: "", class: "form-control" %>
  </div>
  <%= add_new_field("Tambah Dasar Hukum", form, :dasar_hukum, kak )  %>
  <div class="field">
    <%= form.label :tujuan, class: "form-label" %>
    <%= form.text_area :tujuan, multiple: true, value: "", class: "form-control" %>
  </div>
  <%= add_new_field 'Tambah Tujuan', form, :tujuan, kak %>
  <!-- TODO render form sasaran-->
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
<script>
  $(function() {
    $('form').on('click', '.add_fields_<%= kak.id %>', function(event) {
      let regexp, time;
      time = new Date().getTime();
      regexp = new RegExp($(this).data('id'), 'g')
      $(this).before($(this).data('fields').replace(regexp, time))
      return event.preventDefault()
    });

  });
</script>
