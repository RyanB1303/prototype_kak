<div class="card border-0 shadow" id="user_filter">
  <div class="card-header">
    <div class="row align-items-center">
      <div class="col">
        <h2 class="fs-5 fw-bold mb-0">Laporan KaK</h2>
      </div>
      <div class="col text-end">
        <span><%= current_user.nama %></span>
        |
        <span><%= current_user.nik %></span>
      </div>
    </div>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table align-items-center border-start border-end">
        <thead class="thead-light">
          <tr>
            <th class="border-bottom" scope="col">No.</th>
            <th class="border-bottom text-center" scope="col">Pemilik Rencana</th>
            <th class="border-bottom text-center" scope="col">Sub Kegiatan KaK</th>
            <th class="border-bottom text-center border-start border-end" scope="col" colspan="2">Informasi KaK</th>
            <th class="border-bottom text-center" scope="col">Verifikasi</th>
            <th class="border-bottom text-center" scope="col">Action</th>
          </tr>
          <tr>
            <th colspan="3"></th>
            <th class="border-bottom text-center border-start border-end">Rencana Kinerja</th>
            <th class="border-bottom text-center border-start border-end">Pagu Anggaran</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% i = 1 %>
          <% @users.each do |user| %>
            <% user.program_kegiatans.each do |kak| %>
              <tr>
                <th class="text-gray-900 fw-bolder" scope="row" rowspan="<%= kak.sasarans.count + 1 %>"><%= i %></th>
                <th class="text-gray-900 text-wrap border-end" scope="row" rowspan="<%= kak.sasarans.count + 1 %>"><%= user.nama %></th>
                <th class="text-gray-900 text-wrap" scope="row" rowspan="<%= kak.sasarans.count + 1 %>"><%= kak.nama_subkegiatan %></th>
                <td class="p-0 m-0" colspan="2"></td>
                <td class="fw-bolder text-gray-500 text-center border-start border-end" rowspan="<%= kak.sasarans.count + 1 %>">
                  Verifikasi
                </td>
                <td class="fw-bolder text-gray-500 text-center" rowspan="<%= kak.sasarans.count + 1 %>">
                  <%= link_to "/acuan_kerja_new/#{kak.id}", class: "m-3" do %>
                    <i class="fas fa-book-open" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Show item"></i>
                  <% end %>
                  <%= link_to "/pdf_kak/#{kak.id}.pdf", class: "m-3" do %>
                    <span class="far fa-file-pdf" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Cetak KaK"></span>
                  <% end %>
                </td>
              </tr>
              <% kak.sasarans.each do |show_sasaran| %>
                <tr>
                  <td class="text-wrap border-start border-end" width="450px">
                    <%= show_sasaran.sasaran_kinerja %>
                  </td>
                  <td class="text-wrap border-start border-end border-bottom text-center">
                    Rp. <%= number_with_delimiter(show_sasaran.total_anggaran_dengan_komentar, delimiter: '.') or 0 %>
                  </td>
                </tr>
              <% end %>
              <% i = i + 1 %>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="card-body">
    <% jumlah_sasaran = @users.map { |n| n.program_kegiatans.map { |j| j.sasarans.count} }.flatten.reduce(:+) %>
    <% jumlah_anggaran = @users.map { |n| n.program_kegiatans.map { |j| j&.my_pagu } }.flatten.reduce(:+) %>
    <p>Jumlah SubKegiatan : <%= @users.map {|u| u.program_kegiatans.size }.reduce(:+) %></p>
    <p>Jumlah Sasaran Aktif : <%= jumlah_sasaran %></p>
    <p>Jumlah Usulan Terakomodir : </p>
    <ul>
      <li>Musrenbang: <%= @users.map { |u| u.program_kegiatans.map { |n| n.sasarans.map { |s| s.my_usulan.filter { |us| us.instance_of?(Musrenbang) } } } }.flatten.size %></li>
      <li>Pokok Pikiran: <%= @users.map { |u| u.program_kegiatans.map { |n| n.sasarans.map { |s| s.my_usulan.filter { |u| u.instance_of?(Pokpir) } } } }.flatten.size %> </li>
      <li>Mandatori: <%= @users.map { |u| u.program_kegiatans.map { |n| n.sasarans.map { |s| s.my_usulan.filter { |u| u.instance_of?(Mandatori) } } } }.flatten.size %></li>
      <li>Inisiatif Walikota: <%= @users.map { |u| u.program_kegiatans.map { |n| n.sasarans.map { |s| s.my_usulan.filter { |u| u.instance_of?(Pokpir) } } } }.flatten.size %></li>
    </ul>
    <p>Total Pagu Anggaran : Rp. <%= number_with_delimiter(jumlah_anggaran, delimiter: '.') or 0 %> </p>
  </div>
</div>
