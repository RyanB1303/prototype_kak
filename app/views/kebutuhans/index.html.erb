<%= content_for :html_title, "Kebutuhan SPBE" %>
<%= content_for :navigation do %>
  <li class="breadcrumb-item" aria-current="page">SPBE</li>
  <li class="breadcrumb-item active" aria-current="page">Kebutuhan</li>
<% end %>
<% content_for :view_utama  do %>
  <div class="card border-0 shadow">
    <div class="card-header">
      <div class="row align-items-center">
        <div class="col">
          <h2 class="fs-5 fw-bold mb-0">Kebutuhan SPBE</h2>
        </div>
        <div class="col text-end">
          <%= link_to new_kebutuhan_path,
              remote: true, class: 'btn btn-sm btn-primary',
              data: { controller: 'form-modal',
                      form_modal_location_param: 'form-domain-body',
                      action: 'form-modal#appendForm',
                      bs_toggle: 'modal',
                      bs_target: '#form-domain',
              } do %>
            <i class="fas fa-plus me-2"></i>
            <span>Tambah Kebutuhan SPBE Baru</span>
          <% end %>
        </div>
      </div>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table datatable" data-datatable>
          <thead>
            <tr>
              <th>No</th>
              <th>Kebutuhan</th>
              <th>Tahun</th>
              <th>Keterangan</th>
              <th class="text-center">Action</th>
            </tr>
          </thead>
          <tbody>
            <% @kebutuhans.each.with_index(1) do |kebutuhan, i| %>
              <tr>
                <td><%= i %></td>
                <td><%= kebutuhan %></td>
                <td><%= kebutuhan.tahun %></td>
                <td><%= kebutuhan.keterangan %></td>
                <td class="text-center">
                  <%= link_to kebutuhan, class: 'btn btn-outline-success' do %>
                    <i class="fas fa-eye me-2"></i>
                    <span>View Kebutuhan SPBE</span>
                  <% end %>
                  <%= link_to edit_kebutuhan_path(kebutuhan), remote: true,
                      data: { controller: 'form-modal',
                              form_modal_location_param: 'form-domain-body',
                              action: 'form-modal#appendForm',
                              bs_toggle: 'modal',
                              bs_target: '#form-domain' },
                            class: 'btn btn-outline-info' do %>
                    <i class="fa fa-edit me-2"></i>
                    <span>Edit Kebutuhan SPBE</span>
                  <% end %>
                  <%= link_to kebutuhan,
                      method: :delete,
                      class: 'btn btn-outline-danger',
                      data: { confirm_swal: "Hapus kebutuhan #{kebutuhan}?" } do %>
                    <i class="fa fa-trash-alt me-2"></i>
                    <span>Hapus Kebutuhan SPBE</span>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <%= render 'shared/modal_template', modal_name: 'domain' %>
<% end %>
