<%= content_for :html_title, "Kriteria" %>
<%= content_for :navigation do %>
  <li class="breadcrumb-item" aria-current="page">Data Master</li>
  <li class="breadcrumb-item active" aria-current="page">Kriteria</li>
<% end %>
<% content_for :view_utama do %>
  <div class="card border-0 shadow">
    <div class="card-header">
      <div class="row align-items-center">
        <div class="col">
          <h2 class="fs-5 fw-bold mb-0">Kriteria</h2>
        </div>
        <div class="col text-end">
          <%= link_to new_kriterium_path,
           remote: true,
           data: {
                   controller: 'form-modal',
                   action: 'ajax:complete->form-modal#success:prevent',
                   bs_toggle: 'modal',
                   bs_target: '#form-modal'
                 },
           class: 'btn btn-sm btn-primary' do %>
            <i class="fas fa-plus me-2"></i>
            <span>Tambah Kriteria</span>
          <% end %>
        </div>
      </div>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table datatable counter" data-datatable>
          <thead>
            <tr>
              <th>No</th>
              <th>Kriteria</th>
              <th>Poin</th>
              <th>Poin max</th>
              <th>Poin min</th>
              <th>Keterangan</th>
              <th>Type</th>
              <th >Action</th>
            </tr>
          </thead>
          <tbody id="kriteria">
            <%= render @kriteria %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% end %>
