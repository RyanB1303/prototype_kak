<%= content_for :html_title, "Bab 2 - Kepegawaian dan Aset" %>
<%= content_for :navigation do %>
  <li class="breadcrumb-item" aria-current="page">Substansi Renstra</li>
  <li class="breadcrumb-item" aria-current="page">Bab 2</li>
  <li class="breadcrumb-item active" aria-current="page">Kepegawaian dan Aset</li>
<% end %>
<% content_for :view_utama do %>
  <%= render 'shared/card_layout_subtitle', title: "Laporan Kepegawaian dan Aset", sub_title: @opd, sub_title_2: @tahun do %>
    <div class="table-responsive mb-5 d-grid gap-2">
      <%= link_to new_jabatan_path,
       remote: true, class: 'btn btn-sm btn-outline-primary',
       data: {
        controller: 'row',
        action: 'ajax:complete->row#addRow:prevent',
        editable_table_target: 'edit',
        row_element_value: 'new_kepegawaian'
       } do %>
        <span class="fas fa-plus me-2"></span>
        <span>Input</span>
      <% end %>
      <table class="table table-bordered align-items-center counter border">
        <thead class="thead-light sticky-top">
          <tr>
            <th class="text-gray-700" scope="col" rowspan="2">No.</th>
            <th class="text-center text-gray-700" scope="col" rowspan="2">Jabatan</th>
            <th class="text-center text-gray-700" scope="col" rowspan="2">Jenis Jabatan</th>
            <th class="text-center text-gray-700" scope="col" rowspan="2">Action</th>
            <th class="text-center text-gray-700" scope="col" colspan="4">Status Kepegawaian</th>
            <th class="text-center text-gray-700" scope="col" colspan="5">Pendidikan Terakhir</th>
          </tr>
          <tr>
            <th class="text-center text-gray-700" scope="col">PNS</th>
            <th class="text-center text-gray-700" scope="col">PPPK</th>
            <th class="text-center text-gray-700" scope="col">Kontrak</th>
            <th class="text-center text-gray-700" scope="col">Upah</th>

            <th class="text-center text-gray-700" scope="col">SD/SMP</th>
            <th class="text-center text-gray-700" scope="col">SMA</th>
            <th class="text-center text-gray-700" scope="col">D1/D3</th>
            <th class="text-center text-gray-700" scope="col">D4/S1</th>
            <th class="text-center text-gray-700" scope="col">S2/S3</th>
          </tr>
        </thead>
        <tbody id="new_kepegawaian">
          <%= render partial: 'jabatans/jabatan_kepegawaian', collection: @jabatans, as: :jabatan %>
        </tbody>
      </table>
    </div>
  <% end %>
<% end %>
