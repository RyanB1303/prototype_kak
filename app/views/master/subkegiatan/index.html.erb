<div class="row">
  <div class="col-12">
    <nav aria-label="breadcrumb" class="d-none d-md-inline-block mb-3">
      <ol class="breadcrumb breadcrumb-dark breadcrumb-transparent mb-0">
        <li class="breadcrumb-item">
          <%= link_to root_path do %>
            <i class="fas fa-home"></i>
          <% end %>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Master Subkegiatan</li>
      </ol>
    </nav>
    <div class="card border-0 shadow">
      <div class="card-header">
        <div class="row align-items-center">
          <div class="col">
            <h2 class="fs-5 fw-bold mb-0">Master Subkegiatan</h2>
          </div>
          <div class="col text-end">
            <%= link_to '/sync_master_subkegiatan/2023/3803',
                                                  method: :post,
                                                  data: { disable_with: 'Memproses....'},
                                                  class:"btn btn-sm btn-primary" do %>
              <i class="fas fa-sync me-2"></i>
              Update Master Subkegiatan Kegiatan -x
            <% end %>
          </div>
        </div>
      </div>
      <div class="table-responsive">
        <table class="table align-items-center">
          <thead class="thead-light">
            <tr>
              <th class="border-bottom" scope="col">No.</th>
              <th class="border-bottom" scope="col">No SubKegiatan</th>
              <th class="border-bottom" scope="col">Kode SubKegiatan</th>
              <th class="border-bottom" scope="col">Nama SubKegiatan</th>
              <th class="border-bottom" scope="col">Tahun</th>
              <th class="border-bottom" scope="col">id_program</th>
              <th class="border-bottom" scope="col">id_kegiatan</th>
              <th class="border-bottom" scope="col">id_subkegiatan</th>
            </tr>
          </thead>
          <tbody>
            <% @subkegiatans.each.with_index(1) do |subgiat, i| %>
              <tr>
                <td class="text-gray-900 fw-bolder" scope="row"><%= i %></td>
                <td class="fw-bolder text-gray-500" style="white-space: initial !important;"><%= subgiat.no_sub_kegiatan %></td>
                <td class="fw-bolder text-gray-500" style="white-space: initial !important;"><%= subgiat.kode_sub_kegiatan %></td>
                <td class="text-gray-900" scope="row" style="white-space: initial !important;"><%= subgiat.nama_sub_kegiatan %></td>
                <td class="fw-bolder text-gray-500" style="white-space: initial !important;"><%= subgiat.tahun %></td>
                <td class="fw-bolder text-gray-500" style="white-space: initial !important;"><%= subgiat.id_program %></td>
                <td class="fw-bolder text-gray-500" style="white-space: initial !important;"><%= subgiat.id_kegiatan %></td>
                <td class="fw-bolder text-gray-500" style="white-space: initial !important;"><%= subgiat.id_sub_kegiatan_sipd %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
