<div class="row">
  <div class="col-12">
    <nav aria-label="breadcrumb" class="d-none d-md-inline-block mb-3">
      <ol class="breadcrumb breadcrumb-dark breadcrumb-transparent mb-0">
        <li class="breadcrumb-item">
          <%= link_to root_path do %>
            <i class="fas fa-home"></i>
          <% end %>
        </li>
        <li class="breadcrumb-item active" aria-current="page">List OPD</li>
      </ol>
    </nav>
    <div class="card border-0 shadow">
      <div class="card-header">
        <div class="row align-items-center">
          <div class="col">
            <h2 class="fs-5 fw-bold mb-0">List OPD</h2>
          </div>
          <div class="col text-end">
            <%= link_to "Tambah OPD", new_opd_path, class: "btn btn-sm btn-info" %>
          </div>
        </div>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-flush datatable" data-datatable>
            <thead class="thead-light">
               <tr>
                <th>Nama OPD</th>
                <th>Kode OPD</th>
                <th>Lembaga</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @opds.each do |opd| %>
                <tr>
                  <td><%= opd.nama_opd %></td>
                  <td><%= opd.kode_opd %></td>
                  <td><%= opd.lembaga.nama_lembaga %></td>
                  <td><%= link_to 'Show', opd %></td>
                  <td><%= link_to 'Edit', edit_opd_path(opd) %></td>
                  <td><%= link_to 'Destroy', opd, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>