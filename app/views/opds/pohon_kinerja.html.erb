<div class="row">
  <div class="col-12" data-controller="filter-render">
    <nav aria-label="breadcrumb" class="d-none d-md-inline-block mb-3">
      <ol class="breadcrumb breadcrumb-dark breadcrumb-transparent mb-0">
        <li class="breadcrumb-item">
          <%= link_to root_path do %>
            <i class="fas fa-home"></i>
          <% end %>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Pohon Kinerja OPD</li>
      </ol>
    </nav>
    <% if current_user.has_role? :admin %>
      <%= render 'shared/filter_with_tahun_periode_card',
        filter_url: filter_pohon_kinerja_opd_path,
        filter_file: 'hasil_filter_pohon_kinerja_opd',
        action: 'ajax:success->filter-render#append' %>
    <% end %>
    <div class="card border-0 shadow" id="pohon_kinerja_opd" data-filter-render-target="results">
      <div class="card-header">
        <div class="row align-items-center">
          <div class="col">
            <h2 class="fs-5 fw-bold mb-0">Pohon Kinerja OPD</h2>
          </div>
        </div>
      </div>
      <div class="card-body">
        <p>Pilih Tahun dan OPD</p>
      </div>
    </div>
  </div>
</div>
