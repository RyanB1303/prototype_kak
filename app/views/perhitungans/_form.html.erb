<%= form_with(model: [@anggaran, perhitungan]) do |form| %>
  <% if perhitungan.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(perhitungan.errors.count, "error") %> prohibited this perhitungan from being saved:</h2>

      <ul>
        <% perhitungan.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :deskripsi %>
    <%= form.text_field :deskripsi %>
  </div>

  <h4><strong>Koefisiens : </strong></h4>
    <%= form.fields_for :koefisiens do |f| %> 
      <%= render 'koefisien_fields', f: f %>
    <% end %>
    <%= add_koefisiens "Tambah Koefisien", form, :koefisiens %>
  <hr>

  <div class="field">
    <%= form.label :satuan %>
    <%= form.text_field :satuan %>
  </div>

  <div class="field">
    <%= form.label :harga %>
    <%= form.number_field :harga %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

