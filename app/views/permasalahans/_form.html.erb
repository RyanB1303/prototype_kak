<%= form_with(model: [@sasaran,permasalahan]) do |form| %>
  <% if permasalahan.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(permasalahan.errors.count, "error") %> prohibited this permasalahan from being saved:</h2>
      <ul>
        <% permasalahan.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= form.label :jenis, class: "form-label" %>
    <%= form.select :jenis, [ "Umum", "Gender" ],{include_blank: true}, {class: "form-control select2-permasalahan",  "data-placeholder": "Pilih Jenis Permasalahan"} %>
  </div>
  <div class="field">
    <%= form.label :permasalahan, class: "form-label" %>
    <%= form.text_area :permasalahan, class: "form-control" %>
  </div>
  <div class="field">
    <%= form.label :penyebab_internal, class: "form-label" %>
    <%= form.text_field :penyebab_internal, class: "form-control" %>
  </div>
  <div class="field">
    <%= form.label :penyebab_external, class: "form-label" %>
    <%= form.text_field :penyebab_external, class: "form-control" %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
