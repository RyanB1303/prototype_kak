<%= form_with url: pasangkan_pohon_kinerja_path(@pohon), method: :post,
              local: false,
              data: { controller: 'form-ajax',
                      form_ajax_modal_param: 'form-pasangkan-pohon',
                      action: 'ajax:success->form-ajax#successResponseNew'
               } do |form| %>
  <div class="field">
    <%= form.label :pohon_kinerja, class: "form-label" %>
    <p><%= @pohon.keterangan %></p>
  </div>
  <div class="field">
    <%= form.label :strategi, class: "form-label" %>
    <%= form.select :strategi, @strategis.collect{ |str| [str.strategi, str.id] },
      { include_blank: true },
      multiple: true,
      data: {
        controller: 'dropdown',
        placeholder: 'Pilih Strategi',
        dropdown_parent_value: '#form-pasangkan-pohon'
      },
      class: "form-control" %>
  </div>
  <div class="actions my-4">
    <%= form.submit "Simpan Teman" %>
  </div>
<% end %>
