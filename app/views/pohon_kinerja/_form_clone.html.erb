<%= form_with(url: clone_pokin_opd_pohon_kinerja_index_path, method: :post,local: false) do |form| %>
  <div class="field">
    <%= form.label :isu_strategis, { class: "form-label" } %>
    <%= form.text_area :isu_strategis_id, { class: "form-control", readonly: true, value: @isu_strategis } %>
    <%= form.text_area :opd_id, { class: "form-control", readonly: true, value: @opd_id } %>
  </div>
  <div class="field">
    <%= form.label :kelompok_anggaran, { class: "form-label" } %>
    <%= form.select :kelompok_anggaran, options_for_select(KelompokAnggaran.all.collect { |ka| [ka.nama_sederhana_kelompok_tahun, ka.id] } ), {include_blank: true},
                    { data: { placeholder: "Pilih Tahun Cloning",
                              controller: 'dropdown'
                    } } %>
  </div>
  <div class="actions my-4">
    <%= form.submit "Clone" %>
  </div>
<% end %>
