<div class="card border-2 shadow mb-3" id="musrenbang-card">
  <div class="card-header">
    <div class="row align-items-center">
      <div class="row align-items-center">
        <div class="col">
          <h5>Strategi ASN</h5>
        </div>
        <div class="col-3">
                <%= link_to new_strategi_path(nip: current_user.nik, role: "eselon_3"), class: "btn btn-outline-info mx-3" do %>
                  <i class="fas fa-edit me-2"></i>
                  Buat Tactical Objective
                <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table" id="isu-strategis-kota-table">
        <thead>
          <tr>
            <th>Strategic Objective</th>
            <th>Tactical Objective</th>
            <th>Tahun</th>
            <th>NIP</th>
            <th>Role</th>
            <th class="text-center align-middle">Aksi</th>
          </tr>
        </thead>
        <tbody>
            <% @strategis.each do |strategi| %>
              <% pohon = strategi.strategi_atasan %>
            <tr>
              <td class="text-wrap align-middle"><%= pohon.strategi %></td>
              <td class="text-wrap align-middle"><%= strategi.strategi %></td>
              <td class="text-wrap align-middle"><%= strategi.tahun %></td>
              <td class="text-wrap align-middle"><%= strategi.nip_asn %></td>
              <td class="text-wrap align-middle"><%= strategi.role %></td>
              <td class="text-center align-middle">
                  <%= link_to edit_strategi_path(strategi, nip: strategi.nip_asn, usulan_isu: pohon.strategi, role: "eselon_3"), class: "btn btn-outline-info mx-3" do %>
                    <i class="fas fa-edit me-2"></i>
                    Edit Tactical Objective
                  <% end %>

                  <% unless strategi.strategi.blank? %>
                    <%= link_to list_strategi_asn_strategi_path(strategi,nip: strategi.nip_asn, role: "eselon_3"),
                      remote: true,
                      data: {
                        controller: 'form-modal',
                        action: 'form-modal#appendForm',
                        form_modal_location_param: 'form-list-bagikan-body',
                        bs_target: '#form-list-bagikan',
                        bs_toggle: 'modal'
                      },
                      class: "btn btn-outline-gray-700 mx-3" do %>
                      <i class="fas fa-people-arrows me-2"></i>
                      Jumlah dibagikan <span class="badge bg-primary"><%= strategi.strategi_eselon_empats.count %></span>
                    <% end %>

                    <%= link_to bagikan_pokin_strategi_path(
                      strategi.id,
                      role: local_assigns[:role_bawahan],
                      pohon_id: pohon.id
                    ),
                      remote: true, class: 'btn btn-outline-gray-900',
                      data: { controller: 'form-modal',
                              action: 'form-modal#appendForm',
                              form_modal_location_param: 'form-bagikan-strategi-pokin-body',
                              bs_target: '#form-bagikan-strategi-pokin',
                              bs_toggle: 'modal' } do %>
                        <span class="fas fa-share"></span>
                        <span>Bagikan Tactical Objective</span>
                    <% end %>
                  <% end %>

                  <%= link_to strategi, method: :delete, data: { confirm_swal: "Hapus Strategi?"}, class: "btn btn-outline-danger mx-3" do %>
                    <i class="fas fa-edit me-2"></i>
                      Hapus Strategic Objective
                  <% end %>
              </td>
            </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
