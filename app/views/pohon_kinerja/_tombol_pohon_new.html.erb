<div class="d-grid gap-2">
  <div class="panggil-teman">
    <%= link_to panggil_teman_pohon_kinerja_path(strategi, role: role), remote: true,
                    class: 'btn btn-outline-gray-900 align-items-center w-100',
                    data: { controller: 'form-modal',
                            action: 'form-modal#appendForm',
                            form_modal_location_param: 'form-panggil-teman-body',
                            bs_target: '#form-panggil-teman',
                            bs_toggle: 'modal' } do %>
      <span class="fas fa-user-plus me-2"></span>
      <span>Panggil Teman</span>
    <% end %>
  </div>
  <div class="view-pohon">
    <%= link_to pohon_kinerja_path(strategi),
                    class: "btn btn-outline-success align-items-center w-100",
                    target: "blank",
                    data: { pohon_kinerja_target: 'cetak' } do %>
      <i class="far fa-eye me-2"></i>
      <span>View Pohon</span>
    <% end %>
  </div>
  <div class="edit-pohon">
    <%= link_to edit_pohon_kinerja_path(strategi),
                      remote: true,
                      class: 'btn btn-outline-info align-items-center w-100',
                      data: { controller: 'form-modal',
                              action: 'form-modal#appendForm',
                              form_modal_location_param: 'form-pasangkan-pohon-body',
                              bs_target: '#form-pasangkan-pohon',
                              bs_toggle: 'modal' } do %>
      <i class="fas fa-edit me-2"></i>
      <span>Edit Pohon</span>
    <% end %>
  </div>
  <div class="hapus-pohon">
    <%= link_to pohon_kinerja_path(strategi),
                      remote: true, method: :delete,
                      class: 'btn btn-outline-danger align-items-center w-100',
                      data: { confirm_swal: 'Hapus pohon kinerja?' } do %>
      <i class="fas fa-trash me-2"></i>
      <span>Hapus Pohon</span>
    <% end %>
  </div>
</div>
