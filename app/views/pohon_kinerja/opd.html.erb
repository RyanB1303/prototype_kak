<div class="row">
  <div class="col-12" data-controller="filter-render">
    <nav aria-label="breadcrumb" class="d-none d-md-inline-block mb-3">
      <ol class="breadcrumb breadcrumb-dark breadcrumb-transparent mb-0">
        <li class="breadcrumb-item">
          <%= link_to root_path do %>
            <i class="fas fa-home"></i>
          <% end %>
        </li>
        <li class="breadcrumb-item">Pohon Kinerja</li>
        <li class="breadcrumb-item active" aria-current="page">OPD</li>
      </ol>
    </nav>
    <% if current_user.has_role?(:super_admin) %>
      <% flash.each do |type, msg| %>
        <div class="alert alert-info">
          <%= msg %>
        </div>
      <% end %>
      <%= render 'shared/filter_card', filter_url: admin_filter_pohon_kinerja_index_path, action: 'ajax:success->filter-render#append' %>
      <div class="card border-0 shadow" id="kotak_usulan" data-filter-render-target="results">
        <div class="card-header">
          <div class="row align-items-center">
            <div class="col">
              <h2 class="fs-5 fw-bold mb-0">Pohon Kinerja OPD</h2>
            </div>
          </div>
        </div>
        <div class="card-body">
          ...
        </div>
      </div>
    <% else %>
      <div class="card border-0 shadow" id="kotak_usulan" data-filter-render-target="results">
        <div class="card-header">
          <div class="row align-items-center">
            <div class="col">
              <h2 class="fs-5 fw-bold mb-0">Pohon Kinerja OPD</h2>
            </div>
          </div>
        </div>
        <div class="card-body">
          <% if @opd.id == 145 %>
            <%= render 'pohon_kinerja/kotak_usulan_asn', role: "eselon_2", role_bawahan: "eselon_2b" %>
          <% else %>
            <%= render 'pohon_kinerja/kotak_usulan_asn', role: "eselon_2", role_bawahan: "eselon_3" %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<%= render 'shared/modal_xl_template', modal_name: 'bagikan-strategi-pokin' %>
<%= render 'shared/modal_xl_template', modal_name: 'list-bagikan' %>
