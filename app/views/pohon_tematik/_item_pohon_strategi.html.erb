<div class="pohon">
  <div class="pohon-title">
    <h5 class="text-center"><strong>Strategic</strong></h5>
  </div>
  <div class="pohon-body">
    <table class="table table-bordered">
      <tr>
        <td class="text-start" width="30px">Strategi Tematik</td>
        <td class="text-wrap text-start"><%= pohon.pohonable.strategi %></td>
      </tr>
      <% pohon.pohonable.indikator_sasarans.each.with_index(1) do |indikator, i| %>
      <tr>
        <td class="text-start" width="30px">Indikator <%= i %></td>
        <td class="text-wrap text-start"><%= indikator %></td>
      </tr>
      <tr>
        <td class="text-start" width="30px">Target / Satuan</td>
        <td class="text-wrap text-start"><%= indikator.target %> <%= indikator.satuan %></td>
      </tr>
      <% end %>
      <tr>
        <td class="text-start" width="30px">Keterangan</td>
        <td class="text-wrap text-start"><%= pohon.keterangan %></td>
      </tr>
      <tr>
        <td class="text-start" width="30px">Perangkat Daerah</td>
        <td class="text-wrap text-start"><%= pohon.pohonable.opd %></td>
      </tr>
    </table>
  </div>
  <div class="pohon-tombol row mb-3">
    <div class="col">
      <%= link_to edit_strategi_pohon_tematik_path(pohon),
             remote: true,
             data: {
                 controller: 'pohon-tematik',
                 action: 'ajax:complete->pohon-tematik#pindahPohon:prevent',
             },
             class: 'btn btn-outline-info' do %>
        <i class="fas fa-edit me-2"></i>
        <span>Edit</span>
      <% end %>
    </div>
    <div class="col">
      <%= link_to pohon_tematik_path(pohon),
             method: :delete,
             remote: true,
             class: 'btn btn-outline-danger',
             data: { confirm_swal: "Hapus Strategi Tematik #{pohon.pohonable.strategi}?",
                  action: 'ajax:success->pohon-tematik#ajaxDelete'
             } do %>
        <i class="fa fa-trash-alt me-2"></i>
        <span>Hapus</span>
      <% end %>
    </div>
  </div>
  <div class="pohon-foot">
    <button type="button" class="btn btn-tertiary w-100" data-action="pohon-tematik#toggleChild" data-pohon-tematik-show-param="false">Tampilkan</button>
    <div class="d-grid gap-3 mt-3 d-none">
      <%= link_to new_tactical_tematik_pohon_tematik_path(pohon),
             remote: true,
             data: {
                 controller: 'pohon-tematik',
                 pohon_tematik_id_param: "tactical_tematik_#{pohon.object_id}",
                 action: 'ajax:complete->pohon-tematik#addStrategiTematik:prevent',
             },
             class: 'btn btn-info w-100' do %>
        <i class="fas fa-plus me-2"></i>
        <span>Tactical Tematik</span>
      <% end %>
      <%= link_to new_tactical_pohon_tematik_path(pohon),
             remote: true,
             data: {
                 controller: 'pohon-tematik',
                 pohon_tematik_id_param: "tactical_tematik_#{pohon.object_id}",
                 action: 'ajax:complete->pohon-tematik#addStrategiTematik:prevent',
             },
             class: 'btn btn-primary w-100' do %>
        <i class="fas fa-plus me-2"></i>
        <span>Tactical Tematik Baru</span>
      <% end %>
    </div>
  </div>
</div>
