<li>
  <div class="tf-nc" style="width: 450px;">
    <div class="pohon">
      <div class="pohon-title">
        <h5 class="text-center"><strong>Sub-Tematik Kota</strong></h5>
      </div>
      <div class="pohon-body">
        <p class="text-center">Sub-Tema: <%= pohon.pohonable.tema %></p>
        <p class="text-center">Keterangan: <%= pohon.keterangan %></p>
      </div>
      <div class="pohon-tombol row mb-3">
        <div class="col">
          <button class="btn btn-outline-primary">
            <i class="fas fa-exchange-alt me-2"></i>
            <span>Pindah</span>
          </button>
        </div>
        <div class="col">
          <button class="btn btn-outline-info">
            <i class="fas fa-edit me-2"></i>
            <span>Edit</span>
          </button>
        </div>
        <div class="col">
          <%= link_to pohon_tematik_path(pohon),
                      method: :delete,
                      class: 'btn btn-outline-danger',
                      data: { confirm_swal: "Hapus Sub-Tema #{pohon.pohonable.tema}?" } do %>
            <i class="fa fa-trash-alt me-2"></i>
            <span>Hapus</span>
          <% end %>
        </div>
      </div>
      <div class="pohon-foot">
        <div class="d-grid gap-3">
          <%= link_to new_opd_tematik_pohon_tematik_path(pohon),
                        remote: true,
                        data: {
                                controller: 'pohon-tematik',
                                pohon_tematik_id_param: "opd_tematik_#{pohon.object_id}",
                                action: 'ajax:complete->pohon-tematik#addOpdTematik:prevent',
                              },
                        class: 'btn btn-info w-100' do %>
            <i class="fas fa-plus me-2"></i>
            <span>OPD Tematik</span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <ul id="<%= "opd_tematik_#{pohon.object_id}" %>">
    <% if local_assigns[:opds] %>
      <% opds.each do |opd| %>
        <%= render partial: 'pohon_tematik/pohon_opd_tematik', locals: {
          pohon: opd,
          strategics: strategics.select { |str| str.pohon_ref_id == opd.id },
          tacticals: tacticals,
          operationals: operationals } %>
      <% end %>
    <% end %>
  </ul>
</li>
