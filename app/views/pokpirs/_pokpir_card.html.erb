<div class="card border-2 shadow mb-3" id="musrenbang-card">
  <div class="card-header">
    <div class="row align-items-center">
      <div class="row align-items-center">
        <div class="col">
          <h5>Usulan Pokok Pikiran DPRD</h5>
        </div>
      </div>
    </div>
  </div>
  <div class="card-body">
    <%= form_with(url: '/update_sasaran_asn', local: false) do |form| %>
      <div class="field">
        <%= form.hidden_field :sasaran_id, value: sasaran.id   %>
        <%= form.hidden_field :usulan_type  %>
        <%= form.select :usulan_id, [], {include_blank: true}, {id: "select2-pokpir", "data-placeholder": "Pilih Usulan"} %>
      </div>
      <div class="actions">
        <%= form.submit %>
      </div>
    <% end %>
  </div>
  <div class="card-body">
    <table class="table" id="musrenbang-table">
      <thead>
        <tr>
          <th>No</th>
          <th>Usulan</th>
          <th>Alamat</th>
          <th>Permasalahan</th>
          <th>Jenis Usulan</th>
        </tr>
      </thead>
      <tbody>
        <% sasaran.my_usulan.filter { |g| g.instance_of?(Pokpir) }.each.with_index(1) do |sas, i| %>
          <tr>
            <td><%= i %></td>
            <td><%= sas.usulan %></td>
            <td><%= sas.try(:alamat) || sas.try(:peraturan_terkait) %></td>
            <td><%= sas.uraian %></td>
            <td><%= sas.class.type %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
