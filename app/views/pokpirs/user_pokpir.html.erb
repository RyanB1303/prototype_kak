<div class="row">
  <div class="col-12">
    <nav aria-label="breadcrumb" class="d-none d-md-inline-block mb-3">
      <ol class="breadcrumb breadcrumb-dark breadcrumb-transparent mb-0">
        <li class="breadcrumb-item">
          <%= link_to root_path do %>
            <i class="fas fa-home"></i>
          <% end %>
        </li>
        <li class="breadcrumb-item active" aria-current="page"><%= link_to "Usulan Pokok Pikiran", pokpirs_path %></li>
      </ol>
    </nav>
    <div class="card border-0 shadow">
      <div class="card-header">
        <div class="row align-items-center">
          <div class="col">
            <h2 class="fs-5 fw-bold mb-0">Usulan Pokok Pikiran</h2>
          </div>
        </div>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-flush datatable" data-datatable>
            <thead class="thead-light">
              <tr>
                <th class="border-bottom" scope="col">No.</th>
                <th class="border-bottom" scope="col">Usulan</th>
                <th class="border-bottom" scope="col">Alamat</th>
                <th class="border-bottom text-center" scope="col">Status</th>
              </tr>
            </thead>
            <tbody>
              <% @pokpirs.each.with_index(1) do |pokpir, i| %>
                <tr>
                  <td class="text-gray-900 fw-bolder" scope="row"><%= i %></td>
                  <td class="fw-bolder align-middle"><%= truncate(pokpir.usulan, length: 30, separator: '...') %></td>
                  <td class="fw-bolder align-middle"><%= truncate(pokpir.alamat, length: 25, separator: '...') %></td>
                  <td class="action-<%= pokpir.id %> text-center">
                    <% if pokpir.nip_asn.nil? %>
                      <%= button_to diambil_asn_pokpir_path(pokpir), remote: true, class: 'btn btn-primary d-inline-flex align-items-center toggle-active' do %>
                        Ambil Usulan
                      <% end %>
                    <% else %>
                      <button class= 'btn btn-primary d-inline-flex align-items-center toggle-active' do %>
                        Usulan Diambil
                        <i class="fas fa-check-circle text-success icon icon-xs ms-2"></i>
                      </button>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render 'modal' %>
