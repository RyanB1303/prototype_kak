<%= form_with(model: program_kegiatan) do |form_program| %>
  <%= form_program.fields_for(:sasarans) do |form| %>
    <div class="header my-3">
      <p><%= form.index + 1 %></p>
      <div class="field">
        <%= form.label :sasaran_subkegiatan, class: 'form-label' %>
        <%= form.text_field :sasaran_kinerja,class: 'form-control', readonly: true %>
      </div>
      <div class="field">
        <%= form.label :penerima_manfaat, class: 'form-label' %>
        <%= form.text_field :penerima_manfaat, class: 'form-control', readonly: true %>
      </div>
      <%= form.fields_for(:rincian) do |form_rincian| %>
        <div class="field">
          <%= form_rincian.label :data_terpilah, class: 'form-label' %>
          <%= form_rincian.text_field :data_terpilah, class: 'form-control', readonly: true %>
        </div>
      <% end %>
      <%= form.fields_for(:permasalahans) do |form_permasalahan| %>
        <div class="field">
          <%= form_permasalahan.label :permasalahan, class: 'form-label' %>
          <%= form_permasalahan.text_field :permasalahan, class: 'form-control', readonly: true %>
        </div>
        <div class="card border-2 shadow mb-3">
          <div class="card-header">
            <div class="row align-items-center">
              <div class="row align-items-center">
                <div class="col">
                  <h5>Isu Gender</h5>
                </div>
              </div>
            </div>
          </div>
          <%= render 'genders/akses_kontrol_manfaat_gender' %>
          <%= render 'genders/faktor_kesenjangan', form: form_permasalahan %>
        </div>
      <% end %>
      <div class="field">
        <%= form.label :reformulasi_tujuan, class: 'form-label' %>
        <%= form.text_area :sasaran_kinerja, class: 'form-control', rows: 3 %>
      </div>
    </div>

    <div data-gender-form-target="data_baseline" data-controller="gender-form" data-gender-form-sasaran-value="<%= form.object.id %>">
      <%= render 'genders/baseline' %>
    </div>

    <div data-gender-form-target="rencana_aksi" data-controller="gender-form" data-gender-form-sasaran-value="<%= form.object.id %>">
    </div>


    <%= render 'genders/indikator_gender' %>

    <hr />
  <% end %>
<% end %>
