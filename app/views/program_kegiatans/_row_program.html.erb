<tr id="<%= dom_id(prog) %>" class="bg-success text-white">
  <td class="fw-bolder" scope="row"><%= @row_num %></td>
  <td class="fw-bolder" style="white-space: initial !important;"><%= prog.nama_program %></td>
  <td class="fw-bolder" style="white-space: initial !important;"><%= prog.nama_kegiatan %></td>
  <td class="fw-bolder" style="white-space: initial !important;"><%= prog.indikator_program %></td>
  <td class="fw-bolder" style="white-space: initial !important;"><%= prog.target_program %></td>
  <td class="fw-bolder" style="white-space: initial !important;"><%= prog.satuan_target_program %></td>
  <td class="fw-bolder" style="white-space: initial !important;"><%= prog.id_program_sipd %></td>
  <td class="fw-bolder" style="white-space: initial !important;"><%= prog.id_giat %></td>
  <td class="fw-bolder">
    <%= link_to sync_indikator_program_path(
                                                      kode_opd: prog.opd.id_opd_skp,
                                                      id_program: prog.id_program_sipd,
                                                      id_giat: prog.id_giat,
                                                      tahun: Date.today.year),
                                                      method: :post,
                                                      data: { disable_with: 'Memproses....'}, 
                                                      class:"btn btn-sm btn-primary" do %>
      <i class="fas fa-sync me-2"></i>
      Sync Indikator
    <% end %>
    <%= link_to program_edit_program_kegiatan_path(prog, row_num: @row_num), remote: true, data: { 'bs-toggle': 'modal', 'bs-target': "#form-programkegiatan"}, class: "m-3" do %>
      <i class="fa fa-edit" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Edit item"></i>
    <% end %>
    <% if current_user.has_role? :super_admin %>
      <%= link_to prog, class: "m-3" do %>
        <i class="fas fa-eye" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Show item"></i>
      <% end %>
      <%= link_to prog, method: :delete, data: { 'confirm-swal': "Hapus #{prog.nama_program} ?"}, class: "m-3" do %>
        <i class="fa fa-trash-alt" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Hapus item"></i>
      <% end %>
    <% end %>
  </td>
</tr>
