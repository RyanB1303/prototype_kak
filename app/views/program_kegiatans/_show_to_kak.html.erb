<p>
  <strong>Nama Lembaga:</strong>
  <%= programKegiatan.opd.lembaga.nama_lembaga %>
</p>
<p>
  <strong>Nama OPD:</strong>
  <%= programKegiatan.opd.nama_opd %>
</p>
<p>
  <strong>Nama Program:</strong>
  <%= programKegiatan.nama_program %>
</p>
<p>
  <strong>Nama Kegiatan:</strong>
  <%= programKegiatan.nama_kegiatan %>
</p>
<p>
  <strong>Nama SubKegiatan:</strong>
  <%= programKegiatan.nama_subkegiatan %>
</p>
<p>
  <strong>Indikator Kinerja:</strong>
  <%= programKegiatan.indikator_kinerja %>
</p>
<p>
  <strong>Target:</strong>
  <%= programKegiatan.target %>
</p>
<p>
  <strong>Satuan:</strong>
  <%= programKegiatan.satuan %>
</p>
<p>
  <strong>Pagu Anggaran ( dari semua sasaran ) : </strong>
  Rp. <%= number_with_delimiter(programKegiatan.my_pagu, :delimiter => ".") %>
</p>
<hr>
<p>Rincian Anggaran</p>
<div class="card border-2 shadow mb-3">
  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th>no</th>
          <th>Sasaran Kinerja</th>
          <th>Indikator</th>
          <th>Pagu</th>
        </tr>
      </thead>
      <tbody>
      <% programKegiatan.sasarans.each.with_index(1) do |sasaran, i| %>
        <tr>
          <td><%= i %></td>
          <td><%= sasaran.sasaran_kinerja %></td>
          <td><%= sasaran.indikator_kinerja %></td>
          <td>Rp. <%= number_with_delimiter(sasaran.total_anggaran, :delimiter => ".") %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>