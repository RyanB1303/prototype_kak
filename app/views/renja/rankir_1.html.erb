<%= content_for :html_title, "Rancangan Rencana Kerja" %>
<%= content_for :navigation do %>
  <li class="breadcrumb-item" aria-current="page">Laporan</li>
  <li class="breadcrumb-item active" aria-current="page">Rancangan Rencana Kerja</li>
<% end %>
<% content_for :view_utama do %>
  <% if cookies[:tahun] && cookies[:opd] %>
    <div class="card border-0 shadow" id="user_filter" data-controller="page-ajax"
        data-page-ajax-url-value="<%= renja_rankir_renja_1_path %>">
      <div data-page-ajax-target="results">
        <div class="card-header">
          <div class="row align-items-center">
            <div class="col">
              <h2 class="fs-5 fw-bold mb-0">Rancangan Rencana Kerja</h2>
            </div>
          </div>
        </div>
        <%= render(LoaderComponent.new) %>
      </div>
    </div>
  <% else %>
    <%= render 'shared/pilih_tahun_dan_opd' %>
  <% end %>
  <%= render 'shared/modal_template', modal_name: 'rankir-renja' %>
<% end %>