<thead class='<%= "thead-#{sub_jenis}" %>'>
  <% disable_action = true if local_assigns[:disable_action].present? %>
  <tr class='<%= "header-#{sub_jenis}" %>'>
    <th class="border" scope="col" rowspan="2">OPD</th>
    <th class="border" scope="col" rowspan="2">Kode <%= sub_jenis.titleize %></th>
    <th class="border" scope="col" rowspan="2">No.</th>
    <% if disable_action %>
      <th class="border" scope="col" rowspan="2" colspan="2"><%= sub_jenis.titleize %></th>
    <% else %>
      <th class="border" scope="col" rowspan="2"><%= sub_jenis.titleize %></th>
      <th class="border text-center" scope="col" rowspan="2">Aksi</th>
    <% end %>
    <% if disable_action %>
      <% periode.each do |tahun| %>
        <th class="border text-center" scope="col" colspan="10"><%= tahun %></th>
      <% end %>
    <% else %>
      <% periode.each do |tahun| %>
        <th class="border text-center" scope="col" colspan="8"><%= tahun %></th>
      <% end %>
    <% end %>
  </tr>
  <tr>
    <% periode.each do %>
      <th class="border" scope="col">Indikator</th>
      <th class="border" scope="col" width="50px">Target</th>
      <th class="border" scope="col">Satuan</th>
      <th class="border" scope="col" width="50px">Realisasi</th>
      <th class="border" scope="col">Satuan</th>
      <% if disable_action %>
        <th class="border" scope="col" width="50px">Capaian</th>
      <% end %>
      <th class="border" scope="col">Pagu Indikatif</th>
      <th class="border" scope="col">Realisasi</th>
      <% if disable_action %>
        <th class="border" scope="col" width="50px">Capaian</th>
      <% end %>
      <th class="border" scope="col">Keterangan</th>
    <% end %>
  </tr>
</thead>
