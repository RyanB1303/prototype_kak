<tr>
  <td class="text-gray-900 border fw-bolder" scope="row"><%= no %></td>
  <td class="fw-bolder text-gray-500 text-wrap"><%= reviewer.nama %></td>
  <td class="text-gray-900 text-wrap border" scope="row"><%= reviewer.jabatan %></td>
  <td class="text-gray-900 text-wrap border" scope="row">OPD USER</td>
  <td class="fw-bolder text-gray-500 border">
    <ul>
      <li>OPD A</li>
      <li>OPD B</li>
    </ul>
  </td>
  <td class="fw-bolder border text-gray-500 text-center">
    <% if current_user.has_role? :super_admin %>
      <div class="row mb-2">
        <%= link_to 'Edit Reviewer', edit_detail_user_path(reviewer, target_render: list_all_users_path),remote: true, data: { 'bs-toggle': 'modal', 'bs-target': "#form-user"}, class: "btn btn-sm btn-info" %>
      </div>
      <div class="row">
        <%= link_to 'Hapus Reviewer', reviewer, method: :delete, data: { confirm_swal: "Hapus #{reviewer.nama}?" }, class: 'btn btn-outline-danger btn-sm' %>
      </div>
    <% end %>
  </td>
</tr>
