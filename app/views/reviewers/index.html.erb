<%= content_for :html_title, "Reviewer" %>
<%= content_for :navigation do %>
  <li class="breadcrumb-item" aria-current="page">Data Master</li>
  <li class="breadcrumb-item active" aria-current="page">Reviewer</li>
<% end %>
<% content_for :view_utama do %>
  <div class="card border-0 shadow" id="user_khusus">
    <div class="card-header">
      <div class="row align-items-center">
        <div class="col">
          <h2 class="fs-5 fw-bold mb-0">Reviewer</h2>
        </div>
        <div class="col-auto text-end">
          <%= link_to new_reviewer_path,
           remote: true,
           data: {
                   controller: 'form-modal',
                   action: 'ajax:complete->form-modal#success:prevent',
                   bs_toggle: 'modal',
                   bs_target: '#form-modal'
                 },
           class: 'btn btn-sm btn-primary' do %>
            <i class="fas fa-plus me-2"></i>
            <span>Tambah Reviewer</span>
          <% end %>
        </div>
      </div>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-border table-flush datatable" data-controller='form-modal' data-datatable>
          <thead class="thead-light">
            <tr>
              <th class="border" scope="col">No.</th>
              <th class="border" scope="col">Nama / NIP</th>
              <th class="border" scope="col">Jabatan Tim</th>
              <th class="border text-center" scope="col">OPD</th>
              <th class="border text-center" scope="col">Penanggung Jawab</th>
              <th class="border text-center" scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
            <% @reviewers.each.with_index(1) do |reviewer, no| %>
              <%= render partial: 'reviewer', locals: { reviewer: reviewer, no: no } %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% end %>
