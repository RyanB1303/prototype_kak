<div class="row">
  <div class="col-12">
    <nav aria-label="breadcrumb" class="d-none d-md-inline-block mb-3">
      <ol class="breadcrumb breadcrumb-dark breadcrumb-transparent mb-0">
        <li class="breadcrumb-item">
          <%= link_to root_path do %>
            <i class="fas fa-home"></i>
          <% end %>
        </li>
        <li class="breadcrumb-item">Perencanaan</li>
        <li class="breadcrumb-item active" aria-current="page">Rincian Belanja</li>
      </ol>
    </nav>
    <div class="card border-0 shadow">
      <div class="card-header">
        <div class="row align-items-center">
          <div class="col">
            <h2 class="fs-5 fw-bold mb-0">Rincian Belanja Tahun <%= @tahun %></h2>
          </div>
          <div class="col text-end">
            <span><%= current_user.nama %></span>
            |
            <span><%= current_user.nik %></span>
          </div>
        </div>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table align-items-center">
            <thead class="thead-light">
              <tr>
                <th class="border text-center" scope="col">No</th>
                <th class="border text-center" scope="col">Rencana Kinerja</th>
                <th class="border text-center" scope="col">Indikator Kinerja</th>
                <th class="border text-center" scope="col">Target</th>
                <th class="border text-center" scope="col">Satuan</th>
                <th class="border text-center" scope="col">Anggaran</th>
                <th class="border text-center" scope="col">Action</th>
              </tr>
            </thead>
            <tbody>
              <% @subkegiatan_sasarans.each do |subkegiatan,sasarans| %>
                <% pagu = sasarans.map(&:total_anggaran).compact.sum %>
                <tr>
                  <td class="border text-wrap fw-bolder text-gray-900" scope="row" colspan="5">Subkegiatan: <%= subkegiatan&.nama_subkegiatan || 'Belum terisi' %></td>
                  <td class="border" scope="row">Rp. <%= number_with_delimiter(pagu) %></td>
                  <td class="border"></td>
                </tr>
                <% sasarans.each.with_index(1) do |sasaran, i| %>
                  <tr>
                    <td class="border" scope="row" rowspan="<%= sasaran.indikator_sasarans.count + 1 %>"><%= i %></td>
                    <td class="border text-wrap" scope="row" rowspan="<%= sasaran.indikator_sasarans.count + 1 %>"><%= sasaran.sasaran_kinerja %></td>
                    <td class="p-0 m-0" colspan="3"></td>
                    <td class="border" scope="row" rowspan="<%= sasaran.indikator_sasarans.count + 1 %>">Rp. <%= number_with_delimiter(sasaran.total_anggaran) %></td>
                    <td class="border" rowspan="<%= sasaran.indikator_sasarans.count + 1 %>">
                      <div class="row justify-content-center w-100">
                        <div class="col">
                          <%= link_to rincian_belanja_path(sasaran), class: "m-3 btn btn-sm btn-outline-info w-100" do %>
                            <span>Edit</span>
                          <% end %>
                        </div>
                      </div>
                    </td>
                  </tr>
                  <% sasaran.indikator_sasarans.each do |indikator| %>
                    <tr>
                      <td class="border text-wrap"><%= indikator.indikator_kinerja %></td>
                      <td class="border text-center"><%= indikator.target %></td>
                      <td class="border"><%= indikator.satuan %></td>
                    </tr>
                  <% end %>
                  <% sasaran.tahapans.each.with_index(1) do |tahapan, no_tah| %>
                    <tr>
                      <td class="border text-wrap" colspan="5" >Renaksi <%= no_tah %>: <%= tahapan.tahapan_kerja %></td>
                      <td class="border">Rp. <%= number_with_delimiter(tahapan.anggaran_tahapan) %></td>
                      <td class="border"></td>
                    </tr>
                  <% end %>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
