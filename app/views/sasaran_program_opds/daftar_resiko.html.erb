<div class="row">
  <div class="col-12">
    <nav aria-label="breadcrumb" class="d-none d-md-inline-block mb-3">
      <ol class="breadcrumb breadcrumb-dark breadcrumb-transparent mb-0">
        <li class="breadcrumb-item">
          <%= link_to root_path do %>
            <i class="fas fa-home"></i>
          <% end %>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Daftar Resiko</li>
      </ol>
    </nav>
    <% if current_user.has_role? :admin or current_user.has_role? :super_admin or current_user.has_role? :reviewer %>
      <%= render 'shared/filter_with_tahun_card', filter_url: filter_daftar_resiko_path, filter_file: 'daftar_resiko' %>
    <% end %>
    <div class="card border-0 shadow" id="daftar_resiko">
      <div class="card-header">
        <div class="row align-items-center">
          <div class="col">
            <h2 class="fs-5 fw-bold mb-0">Daftar Resiko -  Tahun <%= @tahun_bener %></h2>
          </div>
          <div class="col text-end">
            <span><%= current_user.nama %></span>
            |
            <span><%= current_user.nik %></span>
          </div>
        </div>
      </div>
      <% unless current_user.has_role? :admin %>
        <%= render 'table_daftar_resiko'  %>
      <% end %>
    </div>
  </div>
</div>
<%= render 'shared/modal_template', modal_name: 'dampak-daftar-resiko' %>
