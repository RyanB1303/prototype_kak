<div class="card border-2 shadow mb-3">
  <div class="card-header">
    <div class="row align-items-center">
      <div class="col">
        <h4>Sasaran Kinerja <%= index %></h4>
      </div>
    </div>
  </div>
  <div class="card-body">
    <table class="table table-bordered">
      <tr>
        <td class="w-35"><strong>Atasan</strong></td>
        <td><%= sasaran.user.nama_atasan %></td>
      </tr>
      <tr>
        <td class="w-35"><strong>Pemilik Sasaran</strong></td>
        <td><%= sasaran.user.nama %></td>
      </tr>
      <tr>
        <td class="w-35"><strong>Sasaran Kinerja</strong></td>
        <td><%= sasaran.sasaran_kinerja %></td>
      </tr>
      <tr>
        <td class="w-35"><strong>Indikator Kinerja</strong></td>
        <% if sasaran.indikator_sasarans.empty? %>
          <td><%= sasaran.indikator_kinerja %></td>
        <% end %>
        <% sasaran.indikator_sasarans.order(:id).each do |indikator| %>
          <td><%= indikator.indikator_kinerja %></td>
        <% end %>
      </tr>
      <tr>
        <td class="w-35"><strong>Waktu Yang Dibutuhkan</strong></td>
        <td><%= sasaran.waktu_total %> Bulan</td>
      </tr>
      <tr>
        <td class="w-35"><strong>Total Anggaran Sasaran : </strong></td>
        <td>Rp. <%= number_with_delimiter(sasaran.total_anggaran) %></td>
      </tr>
      <tr>
        <td colspan="2">
          <%= link_to sasaran_path(sasaran), class: 'btn btn-outline-primary w-25' do %>
            <span>Lihat Detail Sasaran</span>
            <span class="fas fa-arrow-right"></span>
          <% end %>
        </td>
      </tr>
    </table>
  </div>
</div>
