<div class="card-header">
  <div class="row align-items-center">
    <div class="col">
      <% opd = Opd.find_by(kode_unik_opd: @kode_opd) %>
      <h2 class="fs-5 fw-bold mb-0">Sasaran Kinerja <%= opd.nama_opd %></h2>
    </div>
    <% if current_user.has_role? :super_admin %>
      <div class="col-2 text-end">
        <% bulan = Date.today.month %>
        <%= link_to sync_sasaran_path(kode_opd: @kode_opd, tahun: Date.today.year, bulan: bulan, tipe_asn: 'pns'),
      data: { disable_with: 'Memproses....'}, 
      class:"btn btn-sm btn-primary" do %>
          <i class="fas fa-sync me-2"></i>
          Sync Sasaran
        <% end %>
      </div>
      <div class="col-2 text-end">
        <%= link_to sync_sasaran_path(kode_opd: @kode_opd, tahun: Date.today.year, bulan: bulan, tipe_asn: 'non_pns'),
      data: { disable_with: 'Memproses....'}, 
      class:"btn btn-sm btn-primary text-success" do %>
          <i class="fas fa-sync me-2"></i>
          Sync Sasaran ASN Bidang
        <% end %>
      </div>
    <% end %>
  </div>
</div>
<div class="table-responsive">
  <table class="table align-items-center">
    <thead class="thead-light">
      <tr>
        <th class="border-bottom" scope="col">No.</th>
        <th class="border-bottom" scope="col">ASN Eselon 4</th>
        <th class="border-bottom text-center" scope="col">OPD</th>
        <th class="border-bottom text-center" scope="col">Jabatan</th>
        <th class="border-bottom text-center" scope="col">Pangkat</th>
        <th class="border-bottom text-center" scope="col">Sasaran Kinerja</th>
        <th class="border-bottom text-center" scope="col">Indikator Kinerja</th>
        <th class="border-bottom text-center" scope="col">Target</th>
        <th class="border-bottom text-center" scope="col">Satuan</th>
        <th class="border-bottom text-center" scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <% sasarans.each.with_index(1) do |sasaran, i| %>
        <tr>
          <td class="text-gray-900 fw-bolder" scope="row" rowspan="<%= sasaran.indikator_sasarans.count + 1 %>"><%= i %></td>
          <td class="text-gray-900 text-wrap" scope="row" rowspan="<%= sasaran.indikator_sasarans.count + 1 %>"><%= sasaran.user.nama %></td>
          <td class="text-gray-900" scope="row" rowspan="<%= sasaran.indikator_sasarans.count + 1 %>"><%= sasaran.user.opd.nama_opd %></td>
          <td class="text-gray-900 text-wrap" scope="row" rowspan="<%= sasaran.indikator_sasarans.count + 1 %>"><%= sasaran.user.jabatan %></td>
          <td class="text-gray-900" scope="row" rowspan="<%= sasaran.indikator_sasarans.count + 1 %>"><%= sasaran.user.pangkat %></td>
          <td class="text-gray-900 text-wrap" scope="row" rowspan="<%= sasaran.indikator_sasarans.count + 1 %>"><%= sasaran.sasaran_kinerja %></td>
          <td class="p-0 m-0 border-start border-end"></td>
          <td class="p-0 m-0 border-start border-end"></td>
          <td class="p-0 m-0 border-start border-end"></td>
          <td class="fw-bolder text-gray-500 text-center" rowspan="<%= sasaran.indikator_sasarans.count + 1 %>">
            <% if current_user.has_role? :super_admin %>
              <%= link_to user_sasaran_path(current_user, sasaran), class: "m-3" do %>
                <i class="fas fa-eye" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Show item"></i>
              <% end %>
              <%= link_to edit_user_sasaran_path(current_user, sasaran), class: "m-3" do %>
                <i class="fa fa-edit" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Edit item"></i>
              <% end %>
              <%= link_to user_sasaran_path(current_user, sasaran), method: :delete, data: { confirm_swal: "Hapus #{sasaran.sasaran_kinerja} ?"}, class: "m-3" do %>
                <i class="fa fa-trash-alt" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Hapus item"></i>
              <% end %>
            <% end %>
          </td>
          <% sasaran.indikator_sasarans.each do |indikator| %>
            <tr>
              <td class="fw-bolder border-start border-end" style="white-space: initial !important;"><%= indikator.indikator_kinerja %></td>
              <td class="fw-bolder border-start border-end" style="white-space: initial !important;"><%= indikator.target %></td>
              <td class="fw-bolder border-start border-end" style="white-space: initial !important;"><%= indikator.satuan %></td>
            </tr>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
