<div class="card border-2 shadow mb-3">
  <div class="card-header">
    <div class="row align-items-center">
      <div class="row align-items-center">
        <div class="col">
          <h4 class="card-title">
            Hasil Output Sasaran
            <span class="ms-2"><%= sesuai?(sasaran.output_terisi?) %></span>
          </h4>
        </div>
      </div>
    </div>
  </div>
  <% unless diajukan? %>
    <div class="card-body">
      <%= form_with(model: sasaran,url: hasil_output_sasaran_path,
                    local: false,
                    data: {
                      controller: 'form-ajax',
                      form_ajax_target_param: 'sasaran-raperda',
                      action: 'ajax:complete->form-ajax#processAjax'
                    }
      ) do |f| %>
        <%= f.select(:hasil_output,
                     ['Raperda', 'Raperwal', 'Rancang Surat Keputusan', 'Bukan Raperda'],
                     {selected: f.object.output_sasaran}, { data: {controller: 'dropdown'} } )%>
        <div class="field">
          <%= f.label 'Nama output', class: "form-label" %>
          <div class="alert alert-warning">
            <i class="far fa-lightbulb me-2"></i>
            Kosongkan jika 'Bukan Raperda'
          </div>
          <%= f.text_area :nama_output, {class: "form-control", required: true, placeholder: 'tuliskan nama perda / perwal / SK', value: f.object.nama_output_sasaran} %>
        </div>
        <div class="actions">
          <%= f.submit %>
        </div>
      <% end %>
    </div>
  <% end %>
  <div class="card-body">
    <div class="table-responsive" id="sasaran-raperda">
      <%= render 'sasarans/hasil_output', sasaran: sasaran %>
    </div>
  </div>
  <hr>
</div>
