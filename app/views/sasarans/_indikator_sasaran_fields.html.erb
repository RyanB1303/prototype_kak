<fieldset class="mb-3">
  <div class="field mt-3">
    <%= f.label :aspek, { class: "form-label" } %>
    <%= f.select(:aspek, (['Kualitas','Kuantitas']), {}, {:class => 'select2-waw'}) %>
  </div>
  <div class="field">
    <%= f.label :indikator_kinerja, { class: "form-label" } %>
    <%= f.text_field :indikator_kinerja, { class: "form-control" } %>
  </div>
  <div class="field">
    <%= f.label :satuan, { class: "form-label" } %>
    <%= f.text_field :satuan, { class: "form-control" } %>
  </div>
  <div class="field">
    <%= f.label :target, { class: "form-label" } %>
    <%= f.text_field :target, { class: "form-control" } %>
  </div>
  <%= link_to 'Hapus Indikator', "#", class: 'remove-field text-danger' %>
</fieldset>
