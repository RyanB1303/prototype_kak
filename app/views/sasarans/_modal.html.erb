<div class="modal fade " id="form-renaksi" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="form-renaksi-title">Form Rencana Aksi</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" id="form-renaksi-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Tutup</button>
        <button type="button" class="btn btn-primary" id="form-renaksi-submit-btn">Submit</button>
      </div>
    </div>
  </div>
</div>

<script>
$(function(){
  $('#form-renaksi-body').html("<%= j render "tahapan_form", tahapan: @sasaran.rincian.tahapans.build, rincian: @sasaran.rincian%>")

  $('#form-renaksi-submit-btn').on('click', () => {
    $('#new-renaksi').submit();
  });
});
</script>