  <h4>Sasaran Kinerja - <%= sasaran_counter + 1 %>  Menyasar pada - <%= sasaran.program_kegiatan.nil? ? "" : sasaran.program_kegiatan.nama_subkegiatan %></h4>
<table class="table table-bordered table-full table-responsive-lg">
  <thead>
    <tr>
      <th>Sasaran kinerja</th>
      <th>Indikator kinerja</th>
      <th>Target</th>
      <th>Satuan</th>
      <th>Rincian Sasaran</th>
      <th>SubKegiatan</th>
      <th colspan="3">Aksi</th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= sasaran.sasaran_kinerja %></td>
        <td><%= sasaran.indikator_kinerja %></td>
        <td><%= sasaran.target %></td>
        <td><%= sasaran.satuan %></td>
        <td>
        <% unless sasaran.rincian %>
          <%= link_to "Tambah Rincian", new_sasaran_rincian_path(sasaran) %>
        <% else %>
          <%= link_to "Susun Rencana Aksi", sasaran_path(sasaran) %>
        <% end %>
        </td>
        <% unless sasaran.program_kegiatan %>
          <td class="text-danger">Belum terhubung</td>
          <% else %>
        <td><%= link_to sasaran.program_kegiatan.nama_subkegiatan, program_kegiatan_path(sasaran.program_kegiatan) %></td>
        <% end %>
        <td>
        <%= link_to "Edit", edit_sasaran_path(sasaran) %>
        <%= link_to "Hapus", sasaran_path(sasaran), method: :delete, data: { confirm: "Hapus ?" } %>
        </td>
      </tr>
  </tbody>
</table>

<% if sasaran.rincian.present? %>
<div>
  <%= render sasaran.rincian %>
<hr>
<%= render sasaran.rincian.tahapans %>
</div>
<% else %>
  <h5>Harap Isi Rincian Sasaran</h5>

<hr>

<% end %>
