<thead class="thead-light">
  <tr>
    <th class="bg-danger text-white border" colspan="7"><%= tipe %> / Strategic Objective</th>
    <th class="text-center"><%= link_to "Buat sasaran baru",new_user_sasaran_path(current_user, tipe: tipe ),data: {'bs-toggle': "tooltip", 'bs-placement': "bottom" } ,title: "Buat Sasaran baru", class: "btn btn-info text-white p-3 btn-sm", target: :_blank %></th>
  </tr>
  <tr>
    <th class="border-bottom" scope="col">No.</th>
    <th class="border-bottom" scope="col">Sasaran Kinerja</th>
    <th class="border-bottom" scope="col">Tahun</th>
    <th class="border-bottom" scope="col">Indikator Kinerja</th>
    <th class="border-bottom" scope="col">Target</th>
    <th class="border-bottom" scope="col">Satuan</th>
    <th class="border-bottom text-center" scope="col">Action</th>
    <th class="border-bottom text-center" scope="col">Pilih ASN</th>
  </tr>
</thead>
<tbody id="tempat-row-sasaran">
  <% sasarans.order(:id).each.with_index(1) do |sasaran, i| %>
    <%= render 'row_tabel_sasaran_admin_per_eselon', sasaran: sasaran, i: i %>
  <% end %>
</tbody>
