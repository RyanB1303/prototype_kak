<div class="row">
  <div class="col-12">
    <nav aria-label="breadcrumb" class="d-none d-md-inline-block mb-3">
      <ol class="breadcrumb breadcrumb-dark breadcrumb-transparent mb-0">
        <li class="breadcrumb-item">
          <%= link_to root_path do %>
            <i class="fas fa-home"></i>
          <% end %>
        </li>
        <li class="breadcrumb-item">Perencanaan</li>
        <li class="breadcrumb-item active" aria-current="page">Rencana Kinerja</li>
      </ol>
    </nav>
    <div class="card border-0 shadow">
      <div class="card-header">
        <div class="row align-items-center">
          <div class="col">
            <h2 class="fs-5 fw-bold mb-0">Rencana Kinerja Tahun <%= @tahun %></h2>
          </div>
          <div class="col text-end">
            <span><%= current_user.nama %></span>
            |
            <span><%= current_user.nik %></span>
          </div>
        </div>
      </div>
      <div class="card-body">
      <div class="table-responsive">
        <table class="table align-items-center">
          <thead class="thead-light">
            <tr>
              <th class="border text-center" scope="col">No</th>
              <th class="border text-center" scope="col">Rencana Kinerja</th>
              <th class="border text-center" scope="col">Indikator Kinerja</th>
              <th class="border text-center" scope="col">Target</th>
              <th class="border text-center" scope="col">Satuan</th>
              <th class="border text-center" scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
            <% @sasarans.each.with_index(1) do |sasaran, i| %>
              <tr>
                <td class="border" rowspan="<%= sasaran.indikator_sasarans.count + 1 %>"><%= i %></td>
                <td class="border text-wrap" rowspan="<%= sasaran.indikator_sasarans.count + 1 %>"><%= sasaran.sasaran_kinerja %></td>
                <% if sasaran.indikator_sasarans.any? %>
                  <td class="p-0 m-0" colspan="3"></td>
                <% else %>
                  <td class="border" colspan="3">
                    <%= link_to 'ISI INDIKATOR SASARAN', edit_sasaran_path(sasaran), class: 'btn btn-outline-danger w-100' %>
                  </td>
                <% end %>
                <td class="border" rowspan="<%= sasaran.indikator_sasarans.count + 1 %>">
                  <%= render 'sasarans/tombol_action_sasaran', sasaran: sasaran %>
                </td>
              </tr>
              <% sasaran.indikator_sasarans.each do |indikator| %>
                <tr>
                  <td class="border text-wrap"><%= indikator.indikator_kinerja %></td>
                  <td class="border text-center"><%= indikator.target %></td>
                  <td class="border text-center"><%= indikator.satuan %></td>
                </tr>
              <% end %>
              <% sasaran.tahapans.each.with_index(1) do |tahapan, no_tah| %>
                <tr>
                  <td class="border text-wrap" colspan="7">Renaksi <%= no_tah %>: <%= tahapan.tahapan_kerja %></td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
      </div>
    </div>
  </div>
</div>
<%= render 'shared/modal_template', modal_name: 'clone-sasaran' %>
