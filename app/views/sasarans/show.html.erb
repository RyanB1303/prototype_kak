<nav aria-label="breadcrumb" class="d-none d-md-inline-block mb-3">
  <ol class="breadcrumb breadcrumb-dark breadcrumb-transparent mb-0">
    <li class="breadcrumb-item">
      <%= link_to root_path do %>
        <i class="fas fa-home"></i>
      <% end %>
    </li>
    <li class="breadcrumb-item" aria-current="page"><%= link_to 'Sasaran Kinerja', user_sasarans_path(current_user.id) %></li>
    <li class="breadcrumb-item" aria-current="page"><%= link_to @sasaran.sasaran_kinerja, user_sasarans_path(current_user.id) %></li>
    <li class="breadcrumb-item active" aria-current="page">Rencana Aksi</li>
  </ol>
</nav>
<% unless @sasaran.rincian %>
  <p>
    <strong>Harap isi Rincian Sasaran</strong>
    <hr>
    <%= render 'rincians/form', rincian: @sasaran.build_rincian %>
  </p>
<% else %>
  <% unless @sasaran.rincian.tahapans.any? %>
    <%= link_to 'Tambah Renaksi', '#', remote: true, data: { 'bs-toggle': 'modal', 'bs-target': '#form-renaksi'} %>
  <% else %>
    <%= render 'rincians/renaksi', sasaran: @sasaran %>
  <% end %>
  <!-- SECTION - render anggaran here -->
  <div class="card border-2 shadow mb-3">
    <div class="card-header">
      <div class="row align-items-center">
        <div class="row align-items-center">
          <div class="col">
            <h5>Tambah SubKegiatan</h5>
          </div>
        </div>
      </div>
    </div>
    <div class="card-body">
      <p>Pilih Program Kegiatan</p>
      <select name="subkegiatan" id="dropdown" data-ajax--url="/program_kegiatans.json" data-ajax--cache="true" data-placeholder="Pilih SubKegiatan" style="width: 100%">>
        <option value=""></option>
        <option value="abc">Contoh SUbKEgiatan 1</option>
      </select>
      
    </div>
  </div>
  <!-- !!SECTION - end anggaran-->
<% end %>
<!-- SECTION - Modal-->
<%= render 'modal' %>
