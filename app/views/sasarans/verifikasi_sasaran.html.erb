<div class="row">
  <div class="col-12">
    <nav aria-label="breadcrumb" class="d-none d-md-inline-block mb-3">
      <ol class="breadcrumb breadcrumb-dark breadcrumb-transparent mb-0">
        <li class="breadcrumb-item">
          <%= link_to root_path do %>
            <i class="fas fa-home"></i>
          <% end %>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Verifikasi Sasaran</li>
      </ol>
    </nav>
    <div class="card border-0 shadow">
      <div class="card-header">
        <div class="row align-items-center">
          <div class="col">
            <h2 class="fs-5 fw-bold mb-0">Verifikasi Sasaran <%= current_user.opd.nama_opd %></h2>
          </div>
        </div>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-flush">
            <thead class="thead-light">
              <tr>
                <th class="border-bottom" scope="col">No.</th>
                <th class="border-bottom" scope="col">Sasaran</th>
                <th class="border-bottom" scope="col">Pembuat</th>
                <th class="border-bottom text-center" colspan="3">Action</th>
              </tr>
            </thead>
            <tbody>
              <% @sasarans.each.with_index(1) do |sasaran, i| %>
                <tr>
                  <td class="text-gray-900 fw-bolder" scope="row"><%= i %></td>
                  <td class="fw-bolder text-gray-500 text-wrap"><%= sasaran.sasaran_kinerja %></td>
                  <td class="fw-bolder text-gray-500"><%= sasaran.user.nama %></td>
                  <td class="fw-bolder text-gray-500">
                    <%= button_to setujui_sasaran_path(sasaran), remote: true, class: 'btn btn-primary d-inline-flex align-items-center toggle-active' do %>
                      Setujui
                      <i class="fas fa-check-circle text-success icon icon-xs ms-2"></i>
                    <% end %>
                  </td>
                  <td class="fw-bolder text-gray-500">
                    <%= button_to tolak_sasaran_path(sasaran), remote: true, class: 'btn btn-danger d-inline-flex align-items-center toggle-active' do %>
                      Tolak
                      <i class="fas fa-times-circle text-white icon icon-xs ms-2"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
