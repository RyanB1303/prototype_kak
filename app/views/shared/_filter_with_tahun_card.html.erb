<div class="card border-0 shadow mb-4">
  <div class="card-header">
    <div class="row">
      <div class="col">
        <h2 class="mb-0">
          Filter
        </h2>
      </div>
    </div>
  </div>
  <div class="card-body">
    <% filter_value =  '' if local_assigns[:filter_file].nil? %>
    <% filter_jenis = local_assigns[:jenis] || '' %>
    <%= form_with url: filter_url, local: false do |form| %>
      <%= form.hidden_field :filter_file, value: filter_value %>
      <%= form.hidden_field :jenis, value: filter_jenis %>
      <%= form.label :tahun %>
      <% year = Date.today.year %>
      <%= form.select :tahun, [year, year + 1] ,{include_blank: true},
          {class: "form-control select2-waw", required: true,  data: {"placeholder": "Tahun"}}  %>
      <br>
      <%= form.label :kode_opd %>
      <% all_opd = local_assigns[:all]  %>
      <%= form.select :kode_opd,  dropdown_opd(all: all_opd),{include_blank: true},
          {class: "form-control select2-waw", data: {"placeholder": "Pilih Opd"}, required: true }  %>
      <%= form.submit 'filter' %>
    <% end %>
  </div>
</div>
