  <% unless flash.empty? %>
  <% flash.each do |key, value| %>
    <% unless value.blank? %>
      <script>
        <% if value.is_a? Array %>
          var text = "<%= value[0]  %>"
          var title = "<%= value[1].capitalize %>"
        <% else %>
          var text = "<%= value %>"
          var title = "<%= value.capitalize %>"
        <% end %>
        <% if key == 'alert' %>
          var key = 'error'
        <% else %>
          var key = "<%= key %>"
        <% end %>
          Swal.fire({
           icon: key,
           title: title,
           showConfirmButton: true,
           timer: 6000,
          })
      </script>
    <% end %>
  <% end %>
<% end %>
