<li class="nav-item" >
  <span class="nav-link d-flex justify-content-between align-items-center collapsed"
        aria-expanded="false"
        data-bs-toggle="collapse"
        data-bs-target="#<%= item[:id_target] %>">
    <span>
      <span class="sidebar-icon">
        <i class="<%= item[:icon] %> icon icon-xs me-2"></i>
      </span>
      <span class="sidebar-text"><%= item[:title] %></span>
    </span>
    <span class="link-arrow">
      <i class="fas fa-angle-right icon icon-sm"></i>
    </span>
  </span>
  <div class="multi-level ms-3 collapse"
       data-sidebar-target="item"
       aria-expanded="false"
       role="list" id="<%= item[:id_target] %>">
    <ul class="flex-column nav">
      <% item[:collections].each do |sub_item| %>
        <% if sub_item[:multi] %>
          <%= render partial: 'shared/nav_item', locals: { item: sub_item, child: true } %>
        <% else %>
          <%= active_link_to(sub_item[:href], wrap_tag: :li, wrap_class: 'nav-item',class: "nav-link #{'ms-3' if local_assigns[:child]}") do %>
            <span>
              <span class="sidebar-text"><%= sub_item[:title] %></span>
            </span>
          <% end %>
        <% end %>
      <% end %>
    </ul>
  </div>
</li>
