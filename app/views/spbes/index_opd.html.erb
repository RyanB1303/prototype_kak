<div class="row">
  <div class="col-12">
    <nav aria-label="breadcrumb" class="d-none d-md-inline-block mb-3">
      <ol class="breadcrumb breadcrumb-dark breadcrumb-transparent mb-0">
        <li class="breadcrumb-item">
          <%= link_to root_path do %>
            <i class="fas fa-home"></i>
          <% end %>
        </li>
        <li class="breadcrumb-item" aria-current="page">Laporan</li>
        <li class="breadcrumb-item active" aria-current="page">Laporan SPBE</li>
      </ol>
    </nav>
    <% if cookies[:tahun] && cookies[:opd] %>
      <%= render 'table_spbe_opd' %>
    <% else %>
      <div class="card border-0 shadow" id="user_filter">
        <div class="card-header">
          <div class="row align-items-center">
            <div class="col">
              <h2 class="fs-5 fw-bold mb-0">Laporan SPBE</h2>
            </div>
          </div>
        </div>
        <div class="card-body">
          <p class="alert alert-info">Pilih Tahun dan OPD</p>
        </div>
      </div>
    <% end %>
  </div>
</div>
