<div class="row">
  <div class="col-12">
    <nav aria-label="breadcrumb" class="d-none d-md-inline-block mb-3">
      <ol class="breadcrumb breadcrumb-dark breadcrumb-transparent mb-0">
        <li class="breadcrumb-item">
          <%= link_to root_path do %>
            <i class="fas fa-home"></i>
          <% end %>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Sumber Dana</li>
      </ol>
    </nav>
    <div class="card border-0 shadow">
      <div class="card-header">
        <div class="row align-items-center">
          <div class="col">
            <h2 class="fs-5 fw-bold mb-0">Sumber Dana</h2>
          </div>
          <div class="col text-end">
            <%= link_to "Tambah Sumber Dana", new_sumber_dana_path,remote:true, data: { 'bs-toggle': 'modal', 'bs-target': "#form-sumberdana"}, class: "btn btn-sm btn-info" %>
          </div>
        </div>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-flush">
            <thead class="thead-light">
              <tr>
                <th class="border-bottom" scope="col">No.</th>
                <th class="border-bottom" scope="col">Kode</th>
                <th class="border-bottom" scope="col">Sumber Dana</th>
                <th class="border-bottom text-center" colspan="3">Action</th>
              </tr>
            </thead>
            <tbody>
              <% @sumber_danas.each.with_index(1) do |sumber_dana, i| %>
                <tr>
                  <td class="text-gray-900 fw-bolder" scope="row"><%= i %></td>
                  <td class="fw-bolder text-gray-500"><%= sumber_dana.kode_sumber_dana %></td>
                  <td class="fw-bolder text-gray-500"><%= sumber_dana.sumber_dana %></td>
                  <td class="fw-bolder text-gray-500"><%= link_to sumber_dana do %>
                      <i class="fas fa-eye" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Show item"></i>
                    <% end %>
                  </td>
                  <td class="fw-bolder text-gray-500"><%= link_to edit_sumber_dana_path(sumber_dana) do %>
                      <i class="fa fa-edit" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Edit item"></i>
                    <% end %>
                  </td>
                  <td class="fw-bolder text-gray-500"><%= link_to sumber_dana, method: :delete, data: {confirm_swal: 'Hapus tahapan ?'} do %>
                      <i class="fa fa-trash-alt" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Hapus item"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render 'modal' %>
