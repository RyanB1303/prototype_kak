<%= content_for :html_title, "Tematik Kota" %>
<%= content_for :navigation do %>
  <li class="breadcrumb-item" aria-current="page">Perencanaan Kota</li>
  <li class="breadcrumb-item active" aria-current="page">Tematik Kota</li>
<% end %>
<% content_for :view_utama do %>
  <div class="card border-0 shadow">
    <div class="card-header">
      <div class="row align-items-center">
        <div class="col">
          <h2 class="fs-5 fw-bold mb-0">Tematik Kota</h2>
        </div>
        <div class="col text-end">
          <%= link_to new_tematik_path,
           remote: true,
           data: {
                   controller: 'form-modal',
                   action: 'ajax:complete->form-modal#success:prevent',
                   bs_toggle: 'modal',
                   bs_target: '#form-modal'
                 },
           class: 'btn btn-sm btn-primary' do %>
            <i class="fas fa-plus me-2"></i>
            <span>Tambah Tema</span>
          <% end %>
        </div>
      </div>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table datatable" data-datatable>
          <thead>
            <tr>
              <th>No</th>
              <th>Tema</th>
              <th>Keterangan</th>
              <th class="text-center">Action</th>
            </tr>
          </thead>
          <tbody>
            <% @tematiks.each.with_index(1) do |tema, i| %>
              <tr>
                <td><%= i %></td>
                <td><%= tahun %></td>
                <td><%= tahun.keterangan %></td>
                <td class="text-center">
                  <%= link_to edit_tematik_path(tema), remote: true,
                     data: {
                       controller: 'form-modal',
                       action: 'ajax:complete->form-modal#success:prevent',
                       bs_toggle: 'modal',
                       bs_target: '#form-modal'
                     },
                     class: 'btn btn-outline-info' do %>
                    <i class="fa fa-edit me-2"></i>
                    <span>Edit Tema</span>
                  <% end %>
                  <%= link_to tema,
                      method: :delete,
                      class: 'btn btn-outline-danger',
                      data: { confirm_swal: "Hapus #{tema}?" } do %>
                    <i class="fa fa-trash-alt me-2"></i>
                    <span>Hapus Tema</span>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% end %>
