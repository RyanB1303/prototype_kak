<fieldset class="tahun col">
  <div class="field">
    <%= form.label :tahun, class: 'form-label' %>
    <%= form.text_field :tahun, { class: 'form-control' } %>
  </div>
  <div class="field ">
    <%= form.label :target, { class: "form-label" } %>
    <%= form.number_field :target, { class: "form-control", step: 0.01 } %>
  </div>
  <div class="field ">
    <%= form.label :satuan, { class: "form-label" } %>
    <%= form.text_field :satuan, { class: "form-control" } %>
  </div>
  <%= link_to_remove_nested(form, link_text: 'Hapus Target',
                            link_classes: 'btn btn-outline-danger mt-2') %>
</fieldset>
