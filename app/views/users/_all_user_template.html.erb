<div class="card-header">
  <div class="row align-items-center">
    <div class="col">
      <h2 class="fs-5 fw-bold mb-0">All Users</h2>
    </div>
    <div class="col-auto text-end">
        <%= link_to "Tambah User", new_user_path, remote: true, data: { 'bs-toggle': 'modal', 'bs-target': "#form-user"}, class: "btn btn-sm btn-info" %>
    </div>
  </div>
</div>
<div class="card-body">
  <div class="table-responsive">
    <table class="table table-border table-flush datatable" data-controller='form-modal' data-datatable>
      <thead class="thead-light">
        <tr>
          <th class="border" scope="col">No.</th>
          <th class="border" scope="col">Nama / NIP</th>
          <th class="border" scope="col">Jabatan</th>
          <th class="border text-center" scope="col">OPD</th>
          <th class="border text-center" scope="col" colspan="2">Role</th>
          <th class="border text-center" scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each.with_index(1) do |user, i| %>
          <% the_dom = "#{dom_id(user)}-roles" %>
          <tr>
            <td class="text-gray-900 border fw-bolder" scope="row"><%= i %></td>
            <td class="fw-bolder text-gray-500 text-wrap"><%= user.nama %> <br>
              <%= user.nik %>
            </td>
            <td class="text-gray-900 text-wrap border" scope="row"><%= user.jabatan %></td>
            <td class="text-gray-900 text-wrap border" scope="row"><%= user.opd.nama_opd %></td>
            <td class="fw-bolder text-gray-500 border" id="<%= the_dom %>">
              <ul>
                <% user.roles.each do |role| %>
                  <li><%= role.name %></li>
                 <% end %>
              </ul>
            </td>
            <td class="border">
              <div class="row mb-2">
                <%= link_to set_role_user_path(user.id, dom_id: the_dom),
                    remote: true,
                    data: { controller: 'form-modal', action: 'form-modal#appendForm',
                            form_modal_location_param: 'form-user-role-body',
                            bs_target: '#form-user-role', bs_toggle: 'modal' },
                    class: "btn btn-sm btn-outline-info d-inline-flex align-items-center" do %>
                    <i class="fa fa-cog me-2" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Edit item"></i>
                    <span>Role</span>
                <% end %>
              </div>
              <div class="row gy-2">
                <% if current_user.has_role? :admin or current_user.has_role? :super_admin %>
                  <% unless user.has_role? :admin %>
                    <%= link_to "/aktifkan_user/#{user.nik}", remote: true, method: :post ,
                      class: 'btn btn-sm btn-outline-success d-inline-flex align-items-center', id: "#{dom_id(user)}" do %>
                    <i class="fa fa-check me-2" data-bs-toggle="tooltip" data-bs-placement="top" title="Aktifkan"></i>
                    <span>Aktifkan</span>
                <% end %>
                <%= link_to "/nonaktifkan_user/#{user.nik}", remote: true, method: :post ,
                  class: 'btn btn-sm btn-outline-danger d-inline-flex align-items-center', id: "#{dom_id(user)}" do %>
                    <i class="fa fa-times-circle me-2" data-bs-toggle="tooltip" data-bs-placement="top" title="Non Aktifkan"></i>
                    <span>Non Aktifkan</span>
                <% end %>
                  <% else %>
                    <% if user.has_role? :asn %>
                      <%= link_to 'Hapus ASN',"/hapus_asn/#{user.nik}", remote: true, method: :post ,class: 'btn btn-sm btn-warning text-dark', id: "#{dom_id(user)}" %>
                    <% end %>
                  <% end %>
                <% end %>
              </div>
            </td>
            <td class="fw-bolder border text-gray-500 text-center">
              <% if current_user.has_role? :super_admin %>
                <div class="row mb-2">
                  <%= link_to 'Edit User', edit_detail_user_path(user, target_render: list_all_users_path),remote: true, data: { 'bs-toggle': 'modal', 'bs-target': "#form-user"}, class: "btn btn-sm btn-info" %>
                </div>
                <div class="row mb-2">
                  <%= link_to 'Update NIP', edit_nip_user_path(user),remote: true,
                    data: { 'bs-toggle': 'modal',
                            action: 'form-modal#appendForm',
                            controller: 'form-modal',
                            form_modal_location_param: 'form-user-nip-body',
                            'bs-target': "#form-user-nip"}, class: "btn btn-sm btn-info" %>
                </div>
                <div class="row">
                  <%= link_to 'Hapus User', user, method: :delete, data: { confirm_swal: "Hapus #{user.nama}?" }, class: 'btn btn-outline-danger btn-sm' %>
                </div>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
