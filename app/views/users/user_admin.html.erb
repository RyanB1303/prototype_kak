<div class="row">
  <div class="col-12">
    <nav aria-label="breadcrumb" class="d-none d-md-inline-block mb-3">
      <ol class="breadcrumb breadcrumb-dark breadcrumb-transparent mb-0">
        <li class="breadcrumb-item">
          <%= link_to root_path do %>
            <i class="fas fa-home"></i>
          <% end %>
        </li>
        <li class="breadcrumb-item active" aria-current="page">List User</li>
      </ol>
    </nav>
    <% if cookies[:tahun] && cookies[:opd] %>
      <% if current_user.has_role?(:super_admin) %>
        <div class="card border-0 shadow" id="user_filter" data-controller="page-ajax"
             data-page-ajax-opd-value="<%= cookies[:opd] %>"
             data-page-ajax-url-value="/filter_user"
             data-page-ajax-tahun-value="<%= cookies[:tahun] %>" >
          <div data-page-ajax-target="results">
            <div class="card-header">
              <div class="row align-items-center">
                <div class="col">
                  <h2 class="fs-5 fw-bold mb-0">List ASN</h2>
                </div>
              </div>
            </div>
            <div class="loader text-center">
              <div class="lds-roller">
                <div></div>
                <div></div>
                <div></div>
                <div></div>
                <div></div>
                <div></div>
                <div></div>
                <div></div>
              </div>
              <p>memuat data..</p>
            </div>
          </div>
        </div>
      <% else %>
        <div class="card border-0 shadow" id="user_filter">
          <div class="card-body">
            <% @kode_opd = current_user.opd.kode_unik_opd %>
            <%= render partial: 'users/hasil_filter',
              locals: { opd: @opd,
                        users: @users,
                        kode_opd: @kode_unik_opd } %>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="card border-0 shadow" id="user_filter">
        <div class="card-header">
          <div class="row align-items-center">
            <div class="col">
              <h2 class="fs-5 fw-bold mb-0">List ASN</h2>
            </div>
          </div>
        </div>
        <div class="card-body">
          <p class="alert alert-info">Pilih Tahun dan OPD</p>
        </div>
      </div>
    <% end %>
  </div>
  <%= render 'modal_user' %>
  <%= render 'shared/modal_template', modal_name: 'user-role' %>
