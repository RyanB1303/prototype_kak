<div class="row">
  <div class="col-12">
    <nav aria-label="breadcrumb" class="d-none d-md-inline-block mb-3">
      <ol class="breadcrumb breadcrumb-dark breadcrumb-transparent mb-0">
        <li class="breadcrumb-item">
          <%= link_to root_path do %>
            <i class="fas fa-home"></i>
          <% end %>
        </li>
        <li class="breadcrumb-item active" aria-current="page">List User</li>
      </ol>
    </nav>
    <% if current_user.has_role?(:super_admin) %>
      <% flash.each do |type, msg| %>
        <div class="alert alert-info">
          <%= msg %>
        </div>
      <% end %>
      <%= render 'shared/filter_card', filter_url: '/filter_user' %>
      <div class="card border-0 shadow" id="user_filter">
        <div class="card-header">
          <div class="row align-items-center">
            <div class="col">
              <h2 class="fs-5 fw-bold mb-0">List User</h2>
            </div>
          </div>
        </div>
        <div class="card-body">
          ...
        </div>
      </div>
    <% else %>
      <div class="card border-0 shadow" id="user_filter">
        <div class="card-body">
          <% @kode_opd = current_user.opd.kode_unik_opd %>
          <%= render partial: 'users/hasil_filter', locals: { opd: current_user.opd, users: current_user.opd.users, kode_opd: current_user.opd.kode_unik_opd } %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<%= render 'modal_user' %>
<%= render 'shared/modal_template', modal_name: 'user-role' %>
